@model IEnumerable<PrototypeWithAuth.Models.ProductSubcategory>
@using PrototypeWithAuth.AppData

@{

    ViewData["Title"] = "Index";
    AppUtility.PageTypeEnum PageType =  (AppUtility.PageTypeEnum)TempData[AppUtility.TempDataTypes.PageType.ToString()];
    AppUtility.MenuItems SectionType = (AppUtility.MenuItems)TempData[AppUtility.TempDataTypes.MenuType.ToString()];
    Layout = "~/Views/Shared/RequestNavView.cshtml";

}

