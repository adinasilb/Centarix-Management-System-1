@model IEnumerable<PrototypeWithAuth.Models.ProductSubcategory>

@{
    ViewData["Title"] = "Index";
    string pagetype = TempData["PageType"].ToString();
    if (pagetype == "requests")
    {
        Layout = "~/Views/Shared/RequestNavView.cshtml";
    }
    else if (pagetype == "inventory")
    {
        Layout = "~/Views/Shared/InventoryNavView.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/View.cshtml";
    }
}

<table class="table">
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>

                    @Html.ActionLink(item.ProductSubcategoryDescription, "Index", "Requests", new { @subcategoryID = @item.ProductSubcategoryID, @PageType = pagetype }, null)
                </td>
            </tr>
        }
    </tbody>
</table>
