@model PrototypeWithAuth.ViewModels.OffDayViewModel
@using PrototypeWithAuth.AppData
<script src="~/js/site.js"></script>
<div class="modal modal-document fader on-form-modal timekeeper-form " id="workFromHomeModal" @*role="dialog" aria-labelledby="Request"*@ data-backdrop="true">
    <div class="modal-dialog-centered mx-auto modal-sm  work-from-home-modal">
        <div class="modal-content d-inline-block modal-border-radius modal-box-shadow">
            @{ var heading = AppUtility.GetDisplayNameOfEnumValue(Model.OffDayType.ToString());}
            <button type="button" class="close modal-close-padding modal-close-style" data-dismiss="modal" aria-label="Close" onclick="$.fn.CloseModal('off-day')">
                <span aria-hidden="true">&times;</span>
            </button>
            <form action="" id="myForm" method="post" enctype="multipart/form-data" style="height: 100%; overflow: auto;" class="modal-padding sickModal">
                <input type="hidden" asp-for="@Model.OffDayType" />
                <input type="hidden" asp-for="@Model.PageType" />
                <input type="hidden" asp-for="@Model.ToDate" />
                <input type="hidden" asp-for="@Model.FromDate" />
                <input type="hidden" asp-for="@Model.Month" />
                <div class="modal-header border-0 border-bottom modal-header-padding">
                    <div class="container">
                        <div class="">
                            <div class="heading-1">Report @heading</div>
                        </div>
                        <div class="mt-5 mb-3">
                            <hr />
                        </div>
                        <div class="text">@Model.FromDate.ToLongDateString()</div>
                    </div>

                </div>

                <input type="hidden" id="SelectedDate" value="@Model.FromDate.ToString("yyyy-MM-dd")" />
                <div class="modal-footer mt-4 border-0 ">
                    <div class="text-center m-auto">
                        <input type="submit" class="custom-button custom-button-font timekeeper-color between-button-margin @Model.PageType" id="saveOffDayConfirmation" value="Save" />
                        <button class="custom-cancel custom-button"  onclick="$.fn.CloseModal('off-day')">Cancel</button>
                    </div>
                </div>
                </form>
        </div>
    </div>
</div>


