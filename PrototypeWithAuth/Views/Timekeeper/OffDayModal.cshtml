@model PrototypeWithAuth.ViewModels.OffDayViewModel
@using PrototypeWithAuth.AppData

<link href="~/css/datepicker.min.css" rel="stylesheet" type="text/css">
<script src="~/js/site.js"></script>
<script src="~/js/Validation/SaveOffDayValidation.js"></script>
<script src="~/js/validate.js"></script>
<div class="modal modal-document fader on-form-modal timekeeper-form " id="" @*role="dialog" aria-labelledby="Request"*@ data-backdrop="true">

    <div class="modal-dialog-centered mx-auto elixir-modal-sm">
        <div class="modal-content d-inline-block modal-border-radius modal-box-shadow">
            <button type="button" class="close modal-close-padding modal-close-style" data-dismiss="modal" aria-label="Close" onclick="$.fn.CloseModal('off-day');">
                <span aria-hidden="true">&times;</span>
            </button>
            <form action="" id="myForm" method="post" enctype="multipart/form-data" style="height: 100%; overflow: auto;" class="modal-padding sickModal saveOffDayForm">
                <input type="hidden" asp-for="@Model.OffDayType" />
                <input type="hidden" asp-for="@Model.PageType" />
                <input type="hidden" asp-for="@Model.ToDate" />
                <input type="hidden" asp-for="@Model.FromDate" />
                <input type="hidden" asp-for="@Model.Month" />
                @{ var heading = AppUtility.GetDisplayNameOfEnumValue(Model.OffDayType.ToString());}
                <div class="modal-header border-0 border-bottom modal-header-padding">
                    <div class="container">
                        <div class="">
                            <div class="heading-1">Report @heading</div>
                        </div>
                        <div class="mt-5 mb-3">
                            <hr />
                        </div>
                    </div>
                </div>
                <div><input name="dateSelected" class="selectedDate d-none" value="" /></div>
                @{
                    bool dataRange = true;
                    if (Model.OffDayType == AppUtility.OffDayTypeEnum.SpecialDay)
                    {
                        dataRange = false;
                    }
                }
                <div class="datepicker-here" data-range="@dataRange.ToString().ToLower()" id="vacation-dates"
                     data-multiple-dates-separator=" - " data-language='en'></div>
                <div class="modal-footer mt-4 border-0 ">
                    <div class="text-center m-auto">
                        <input type="submit" class="custom-button custom-button-font section-bg-color between-button-margin " id="saveOffDay" value="Save" />
                        <button type="button" class="custom-cancel custom-button cancel-email" data-dismiss="modal" onclick="$.fn.CloseModal('off-day')">Cancel</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
