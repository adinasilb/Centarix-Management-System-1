@model PrototypeWithAuth.ViewModels.AddLocationViewModel

<script src="~/js/site.js" asp-append-version="true"></script>
<div class="modal-dialog  modal-dialog-scrollable modal-lg" role="document" style="max-height:100%; overflow-y:auto;">
    <div class="modal-content d-inline-block">
        <form id="AddLocationForm" action="" method="post" enctype="multipart/form-data" style="height: 100%; overflow: auto;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="modal-header">
                <h4>ADD LOCATION MODAL</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body">
                <div class="form-group">
                    <label asp-for="LocationInstance.LocationInstanceName" class="control-label"> </label>
                    <input asp-for="LocationInstance.LocationInstanceName" type="text" class="form-control" />

                </div>
                <div class="form-group">
                    <label asp-for="LocationTypesDepthOfZero" class="control-label">Type of storage</label>
                    @Html.DropDownListFor(m => m.LocationInstance.LocationTypeID,
                    new SelectList(Model.LocationTypesDepthOfZero, "LocationTypeID", "LocationTypeName"),
                    "Select Type", new { @class = "form-control" })
                    <span asp-validation-for="LocationInstance.LocationTypeID" class="text-danger"></span>
                </div>

                <div class="col-md-12 divSublocations">
                </div>

            </div>

            <div class="modal-footer text-center">

                <input type="submit" value="Save" asp-action="AddLocation" class="inv-button float-left" />
                <input type="button" value="Cancel" data-dismiss="modal" class="cancel-button" />
                <hr />
                @if (@User.IsInRole("Admin")||@User.IsInRole("Manager"))
                {
                <button class="btn btn-link load-add-location-type" style="color:#30BCC9;">Add Location Type</button>
                }
            </div>
        </form>
    </div>
</div>


