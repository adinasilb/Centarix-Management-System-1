<script src="~/js/site.js" asp-append-version="true"></script>
@if (!Model.IsSmallestChild)
{
    @*<div class="spinner-border center" role="status" id="loading1" style="display:none;">
            <span class="sr-only">Loading...</span>
        </div>*@

    <div class="center" role="status" id="loading2" style="display:none;">
        <img src="~/images/css/Loading/centarix_loading3.gif" />
    </div>

    var thisid = "table";
    if (Model.SublocationInstances != null)
    {
        thisid = "table" + Model.SublocationInstances.FirstOrDefault().LocationInstanceParentID;
    }
    <div class="col sublocation-index" id="@thisid" parentName="@Model.PrevLocationInstance.LocationInstanceName">
        <table class="table table-sm border-0">
            @foreach (var locationInstance in Model.SublocationInstances)
            {
                if (!locationInstance.IsEmptyShelf)
                {
                    <tr class="border-0" name="@locationInstance.LocationInstanceParentID">
                        <td class="border-0 px-0">
                            <button class="btn btn-block load-sublocation-view clicked-button px-0" value="@locationInstance.LocationInstanceID">
                                @locationInstance.LocationInstanceName
                                <i class="icon-back-24px ml-3 large-icon float-right"></i>
                            </button>
                        </td>
                    </tr>
                }
                else
                {
                    <tr class="" name="@locationInstance.LocationInstanceParentID">
                        <td class="">
                            <button class="btn btn-block load-visual-sublocation-view clicked-butto"n value="@locationInstance.LocationInstanceID">
                                @locationInstance.LocationInstanceName (Empty)
                                <i class="icon-back-24px ml-3 large-icon float-right"></i>
                            </button>
                        </td>
                    </tr>
                }
                @*l.LocationInstanceName.ToString();*@
            }
        </table>
    </div>

}