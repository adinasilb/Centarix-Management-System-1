@model PrototypeWithAuth.ViewModels.SublocationIndexViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<script src="~/js/site.js" asp-append-version="true"></script>
<div class="spinner-border center" role="status" id="loading1" style="display:none;">
    <span class="sr-only">Loading...</span>
</div>
<div class="row" style="height:4.55rem">
    @*in order to align colOne and colTwo*@
    <div class="col-md-12">
        @if (Model.PrevLocationInstance != null && Model.SublocationInstances.FirstOrDefault().LocationType.Depth > 1)
        {
            //replaced 'btn btn-outline-secondary' with 'inv-button'
            <button class="inv-button load-sublocation-view" value="@Model.PrevLocationInstance.LocationInstanceParentID"><i class="fas fa-undo-alt"></i> &nbsp; @Model.PrevLocationInstance.LocationInstanceName</button>

            <br />
        }
    </div>
</div>

<div class="row">
    <div class="col-md-12 ">
        <table class="table table-sm table-hover " style="background-color:rgba(0, 0, 0, 0.03);">
            @foreach (var locationInstance in Model.SublocationInstances)
            {
                <tr class="border-0">
                    <td class="">
                        @if (Model.IsSmallestChild)
                        {
                            //in the future this button should point to the location to see or insert a request
                            @*shouldn't this be - " if {this is the SmallestChild} - then it SHOULDNT be a button...?
                                <label value="@locationInstance.LocationInstanceID" style="vertical-align:middle;">@locationInstance.LocationInstanceName</label>*@
                            <button class="btn btn-block" value="@locationInstance.LocationInstanceID">@locationInstance.LocationInstanceName</button>
                        }
                        else
                        {
                            <button class="btn btn-block load-sublocation-view" value="@locationInstance.LocationInstanceID">@locationInstance.LocationInstanceName</button>
                        }
                    </td>
                </tr>
                @*l.LocationInstanceName.ToString();*@
            }
        </table>
    </div>
</div>



