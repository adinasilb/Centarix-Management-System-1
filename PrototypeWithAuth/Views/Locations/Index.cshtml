@model PrototypeWithAuth.ViewModels.LocationTypeViewModel;
@using PrototypeWithAuth.AppData;
@{
    if (!AppUtility.IsAjaxRequest(Context.Request))
    {
        ViewData["Title"] = "Index";
        Layout = "~/Views/Shared/RequestNavView.cshtml";
    }
    var pagetype = "";
    switch (TempData[AppUtility.TempDataTypes.MenuType.ToString()])
    {
        case AppUtility.MenuItems.Requests:
            pagetype = "orders-and-inv";
            break;
        case AppUtility.MenuItems.LabManagement:
            pagetype = "labmanage";
            break;
    }
}

<input type="hidden" asp-for="SectionType" />
<script src="~/js/site.js"></script>
<div class="locations-page @pagetype " style=" margin-right: -5.625rem !important;">
