        <div class="col-9">
            <div class="row pl-0 ">
                @foreach (var type in Model.LocationTypes)
                {
                    <ul class="pl-0">
                        <li class="list-inline-item">
                            <span class="opac-87 location-type-name  top-menu load-location-index-view" value=@type.LocationTypeID>
