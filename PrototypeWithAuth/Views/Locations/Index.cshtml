@model PrototypeWithAuth.ViewModels.LocationIndexViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/ManageLocationView.cshtml";
}

@*<script src="~/js/site.js" asp-append-version="true"></script>*@
@if (@User.IsInRole("Admin") || @User.IsInRole("Manager"))
{
    <div class="row mt-4">
        <div class="col-2 offset-1">
            <button class="inv-button load-add-location"  data-target="item" data-backdrop="static" data-keyboard="false" href="item">
                ADD LOCATION
            </button>
        </div>
        
    </div>
}
<br />
<div class="row">
    <div class="col-md-3 colOne pr-0 pl-5">
        <br />
        <table class="table table-sm table-noheaderlines table-headerspaced table-hover border">
            <thead>
                <tr>

                    <th class="text-center font-weight-bold">
                        Location Name
                        @*@Html.DisplayNameFor(item => item.LocationsDepthOfZero.FirstOrDefault().LocationInstanceName)*@
                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.LocationsDepthOfZero)
                {

                    <tr class="border-0">
                        <td class="">
                            <button class="btn btn-block load-sublocation-view clicked-button" value="@item.LocationInstanceID">@item.LocationInstanceName</button>
                        </td> @*Freezer names*@
                    </tr>
                }
            </tbody>

        </table>

    </div>
    <div class="col-md-3 colTwoSublocations text-center pl-0">

    </div>
    <div class="col-md-6 VisualBoxColumn">

    </div>
</div>

