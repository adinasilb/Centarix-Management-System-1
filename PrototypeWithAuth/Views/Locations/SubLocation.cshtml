@model PrototypeWithAuth.ViewModels.SubLocationViewModel

@{
    var i = 0;
    var parentType = Model.LocationTypes.FirstOrDefault().LocationTypeParentID;
    switch (parentType)
    {
        case 100: //-196
            <input style="display: none;" asp-for="LocationTypeParentID" value="@parentType" />
            <div class="row mx-0 px-0">
                <div class="col-4 pl-0 pr-2">
                    <span style="line-height:2.5rem; font-size:1.2rem;">@Html.DisplayFor(modelItem => Model.LocationTypes.ToList()[0].LocationTypeName):</span>
                    <input asp-for="LocationInstances[0].Height" min="0" class="form-control-plaintext border-bottom" />
                    <input asp-for="LocationInstances[0].LocationTypeID" value="@Model.LocationTypes.ToList()[0].LocationTypeID" type="hidden" />
                </div>
                <div class="col-4 px-2">
                    <span style="line-height:2.5rem; font-size:1.2rem;">@Html.DisplayFor(modelItem => Model.LocationTypes.ToList()[1].LocationTypeName):</span>
                    <input asp-for="LocationInstances[1].Height" min="0" class="form-control-plaintext border-bottom" />
                    <input asp-for="LocationInstances[1].LocationTypeID" value="@Model.LocationTypes.ToList()[1].LocationTypeID" type="hidden" />
                </div>
                <div class="col-4 pl-2 pr-0">
                    <span style="line-height:2.5rem; font-size:1.2rem;">@Html.DisplayFor(modelItem => Model.LocationTypes.ToList()[2].LocationTypeName):</span>
                    @Html.DropDownListFor(
                        m => m.LocationInstances[2].Height,
                        Model.BoxTypes196,
                        "",
                        new { @class = "form-control-plaintext border-bottom" }
                    )
                    <input asp-for="LocationInstances[2].LocationTypeID" value="@Model.LocationTypes.ToList()[2].LocationTypeID" type="hidden" />
                </div>
            </div>
            break;
        case 200: //-80
            <div class="container" style="display:flex; justify-content:space-around;">
            </div>
            break;
        case 300: //-20
            <div class="container" style="display:flex; justify-content:space-around;">
            </div>
            break;
        case 400: //-4
            <div class="container" style="display:flex; justify-content:space-around;">
            </div>
            break;
        case 500: //-25
            <div class="container" style="display:flex; justify-content:space-around;">
            </div>
            break;
        default:
            <div class="container" style="display:flex; justify-content:space-around;">

                @foreach (var item in Model.LocationTypes)
                {
                    <div @*style="background-color: rgba(48, 188, 201, 0.06)"*@>
                        <div>
                            <span style="line-height:2.5rem; font-size:1.2rem;">@Html.DisplayFor(modelItem => item.LocationTypeName):</span>
                        </div>
                        <div class="form-inline" style="justify-content:center;">
                            <input asp-for="LocationInstances[i].Height" min="0" class="form-control-plaintext border-bottom" style="width:3rem;" /> &nbsp; x &nbsp;
                            <input asp-for="LocationInstances[i].Width" min="0" class="form-control-plaintext border-bottom" style="width:3rem;" />
                        </div>
                        <div style="justify-content:center;">
                            <div>
                                <input asp-for="LocationInstances[i].LocationTypeID" value="@item.LocationTypeID" type="hidden" />
                            </div>
                        </div>

                    </div>

                    i++;
                }
            </div>
            break;
    }
}



