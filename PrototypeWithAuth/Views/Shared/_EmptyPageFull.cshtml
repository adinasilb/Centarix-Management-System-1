@using Microsoft.AspNetCore.Identity
@using PrototypeWithAuth.Data
@using PrototypeWithAuth.AppData


<div class="position-absolute h-100 w-100" style="        margin-left: -5.625rem !important;
        margin-right: -5.625rem !important;
        margin-top: -5rem;
">
    <div class="row flex-column h-100 justify-content-center align-items-center " style="        max-height: 750px;
    }
">
        <label class="empty-page-text">Nothing is here</label>
        <div class="py-3">
            @{
                if (Model.PageType == AppUtility.PageTypeEnum.AccountingNotifications)
                {
                    <div class="row">

                        @if (Model.SidebarType == AppUtility.SidebarEnum.PartialDelivery)
                        {
                            <div class="accounting-form">
                                @Html.ActionLink("Split Partials", "SplitPartials", "Requests", null, new { @class = "custom-button" })
                                @Html.ActionLink("Split Costs", "SplitCosts", "Requests", null, new { @class = "custom-button" })
                            </div>
                        }
                    </div>
                }
            }
            <img src="~/images/css/Empty_Page.png" width="350" alt="Empty Page">
        </div>
    </div>
</div>
