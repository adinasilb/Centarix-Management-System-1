@using Microsoft.AspNetCore.Identity
@using PrototypeWithAuth.Data
@using PrototypeWithAuth.AppData
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "UsersView";
    Layout = null;

    var navClass = "bold-hover-effects";
    var activeNavClass = " active";
    var ListClasses = navClass;
    var AddClasses = navClass + " create-user-modal";
    if (TempData["PageType"] != null)
    {
        switch (TempData["PageType"])
        {
            case AppUtility.UserPageTypeEnum.Index:
                ListClasses += activeNavClass;
                break;
            case AppUtility.UserPageTypeEnum.Add:
                AddClasses += activeNavClass;
                break;
        }
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Centarix Management System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/css/elixir-fonts/elixir-icons.css" rel="stylesheet" />
    @*load the jquery ui stylesheet*@
    <link rel="stylesheet" href="~/css/jquery-ui.min.css">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @*load jquery ui*@
    @*<script src="~/lib/jquery/jquery-ui.min.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>*@

    @*<script src="~/js/site.js"></script>*@
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.9/jquery.validate.js"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/mvc/3.0/jquery.validate.unobtrusive.min.js"></script>


</head>
<body>
    <header class="sticky-top">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow ourNavBar">
            <div class="container-fluid justify-content-start float-left d-inline-block pl-0" style="width:auto">
                <a style="padding-left:0.85rem;" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/css/Centarix_Logo_only.png" height="20" alt="Logo" /></a>
            </div>
            <div class="container-fluid">
                <ul class="navbar-nav flex-grow-1 dropdown-menu-md-left" style="font-size:1.25rem; font-weight:500">
                    <li class="nav-item mx-4">
                        @Html.ActionLink("Users", "Index", "Admin", new { }, new { @class = "activeUserClass", @role = "button", @id = "inventory-link" })
                    </li>
                </ul>
            </div>
            <div class="container-fluid justify-content-end">
                <div class="navbar-collapse collapse d-md-inline-flex flex-md-row-reverse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"> @UserManager.GetUserAsync(User).Result.FirstName @UserManager.GetUserAsync(User).Result.LastName &nbsp; <img src="~/images/css/profile_circle_big.png" height="30px" alt="User image" /></a>
                        </li>
                        <li class="nav-item">
                            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid pl-0">
        <main role="main">
            <div style="display: flex;" class="usersview">
                <div style="min-width: 110px; min-height:100rem; padding:5px; font-size:small;" class="p-2 border-right sidebar-shadow text-center ourNavBar">
                    <ul style="position:fixed" class="nav flex-column nav-pills nav-stacked mb-lg-3 pl-lg-4 pl-md-3 pl-sm-2">
                        <li class="nav-item my-4 acc-sidebar">
                            <a href="@Url.Action("Index", "Admin")" class="@ListClasses"> <i class="icon-cancel_presentation-24px" style="font-size:1.6rem;"></i><br /> List <br /></a>
                        </li>
                        <li class="nav-item my-4 acc-sidebar">
                            <a href="" class="@AddClasses"> <i class="icon-monetization_on-24px" style="font-size:1.6rem;"></i><br /> Add <br /></a>
                        </li>
                    </ul>
                </div>
                <div style="flex-grow: 1; position:relative; padding: 2rem;">
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

<script>
    $(".create-user-modal").on("click", function (e) {
        $("li a").removeClass("active");
        $(".create-user-modal").addClass("active");

        console.log("create user modal clicked");
        var $itemurl = "Admin/CreateUserModal/";
        console.log("itemurl: " + $itemurl);
        //$("#loading").show();
        $.fn.CallPage($itemurl);
        return false;
    });
    $(".edit-user-modal").on("click", function (e) {
        console.log("edit user modal clicked");
        console.log("val: " + $(this).data('string'));
        var $itemurl = "Admin/EditUserModal/?id=" + $(this).data('string');
        console.log("itemurl: " + $itemurl);
        //$("#loading").show();
        $.fn.CallPage($itemurl);
        return false;
    });
    $.fn.CallPage = function ($itemurl) {
        console.log("in call page function");
        //delete existing modals
        $('.modal').replaceWith('');
        $(".modal-backdrop").remove();
        $.ajax({
            async: true,
            url: $itemurl,
            type: 'GET',
            cache: true,
            success: function (data) {
                //$("#loading").hide();
                console.log("success!");
                var modal = $(data);
                $('body').append(modal);
                $(".modal-view").modal({
                    backdrop: true,
                    keyboard: false,
                });
                //shows the modal
                $(".modal").modal('show');
                $.fn.OnOpenModal();
            }
        });
    };

    $.fn.OnOpenModal = function () {
        $('.modal-content a:first').tab('show');
    };
</script>