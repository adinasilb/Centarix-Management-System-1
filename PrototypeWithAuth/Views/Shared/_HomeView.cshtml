@using Microsoft.AspNetCore.Identity
@using PrototypeWithAuth.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Centarix Management";
    Layout = "~/Views/Shared/Master.cshtml";
}
    @if (SignInManager.IsSignedIn(User) & (User.IsInRole("Admin")))
    {
        @*<form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("GetHomeView", "Admin", new { })"> </form>*@
        <header class="sticky-top">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow ourNavBar p-0">



                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav dropdown-menu-md-left" style="font-size:1.25rem; font-weight:500; ">
                        <li class="nav-item mx-4 d-table ">

                        </li>
                    </ul>
                </div>
                <div class="form-inline">
                    <div class="md-form my-0">
                        <a href="#" class="text-dark"> @UserManager.GetUserAsync(User).Result.FirstName @UserManager.GetUserAsync(User).Result.LastName &nbsp; </a>

                        <button id="profile-img" class="btn no-box-shadow"><img src="~/images/css/profile_circle_big.png" height="30" alt="default User image" /></button>
                    </div>
                </div>

            </nav>
            <div class=" logout-div">
                <form class="form-inline " asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" id="logout-form" class="nav-link border no-box-shadow btn-white btn-link text-dark logout-button">Logout</button>
                </form>
            </div>
        </header>


    }
    else if (SignInManager.IsSignedIn(User))
    {
        <header class="sticky-top">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow ourNavBar p-0">



                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav dropdown-menu-md-left" style="font-size:1.25rem; font-weight:500; ">
                        <li class="nav-item mx-4 d-table ">

                        </li>
                    </ul>
                </div>
                <div class="form-inline">
                    <div class="md-form my-0">
                        <a href="#" class="text-dark"> @UserManager.GetUserAsync(User).Result.FirstName @UserManager.GetUserAsync(User).Result.LastName &nbsp; </a>

                        <button id="profile-img" class="btn no-box-shadow"><img src="~/images/css/profile_circle_big.png" height="30" alt="default User image" /></button>
                    </div>
                </div>

            </nav>
            <div class=" logout-div">
                <form class="form-inline " asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" id="logout-form" class="nav-link border no-box-shadow btn-white btn-link text-dark logout-button">Logout</button>
                </form>
            </div>
        </header>
    }

    <div class="text-center container col-md-7 center-horizontally" style="min-width:560px">
        <div class="row h-100">
            <div class="col-12 my-auto">
                <br /><br /><br /><br /><br /><br />
                <img style="width:30em; max-width: 100%; min-width:500px" class="mb-3" src="~/images/css/Centarix_Logo.png" alt="Centarix Logo" />
                <br /><br />
                <h2 style="color:#DB2127; font-weight:600" class="mb-5">Maximizing Health</h2>


                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

