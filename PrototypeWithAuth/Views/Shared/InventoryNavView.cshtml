
@{
    ViewData["Title"] = "InventoryNavView";
    Layout = "~/Views/Shared/View.cshtml";
}
@*  *@
<div class="row">
    <div class="col-md-2 border-right">
        <nav class="navbar flex-grow-1">
            <ul class="nav navbar-nav flex-column nav-pills nav-stacked">
                <li class="nav-item">
                    <button class="btn-link text-dark open-upsert-modal" data-url="@Url.Action("CreateModal","Products", new { })">Add Item</button>
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-dark">Last Item</a>
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    @Html.ActionLink("Type", "Index", "ProductSubcategories", new { }, new { @class = "btn-link text-dark" })
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    @Html.ActionLink("Vendor", "Index", "Vendors", new { }, new { @class = "btn-link text-dark" })
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    @Html.ActionLink("Owner", "Index", "Owners", new { }, new { @class = "btn-link text-dark" })
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    @Html.ActionLink("Location", "Index", "Locations", new { }, new { @class = "btn-link text-dark" })
                </li>
            </ul>
        </nav>
    </div>
    <div class="col-md-10 border-left">
        @RenderBody()
    </div>
</div>

<!-- MODAL FOR UPSERT -->
<div id='upsert-modal' class='modal fade in'>
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>
