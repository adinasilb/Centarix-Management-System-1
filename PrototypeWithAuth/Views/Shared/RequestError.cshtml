@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
    Layout = "~/Views/Shared/RequestNavView.cshtml";
}
<div class="container">
    <br />
    <br />
    <h1 class="text-danger-centarix">Error.</h1>
    <h2 class="text-danger-centarix">An error occurred while processing your request.</h2>

    @*@if (Model.ShowRequestId)
        {
            <p>
                <strong>Request ID:</strong> <code>@Model.RequestId</code>
            </p>
        }*@

    @{
        var ErrorMessage = "";
        var InnerMessage = "";
        if (TempData["ErrorMessage"] != null)
        {
            ErrorMessage = TempData["ErrorMessage"].ToString();
        }
        if (TempData["InnerMessage"] != null)
        {
            InnerMessage = TempData["InnerMessage"].ToString();
        }
    }

    <hr />
    <br />

    @ErrorMessage
    <br />
    <br />
    <br />
    <strong>Please see your programmer with the following message:</strong>
    <hr />
    @InnerMessage
</div>
