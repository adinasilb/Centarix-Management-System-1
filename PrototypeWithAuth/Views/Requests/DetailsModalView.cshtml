                                    {
                                        <div class="col-4">
                                            <label class="control-label">Esitmated Expected supply date</label>
                                            <input value="@DateTime.Now.AddDays(Model.Request.ExpectedSupplyDays ?? 0);" class="form-control-plaintext border-bottom" name="expected-supply-days" disabled="disabled" />
                                        </div>
                                    }

                                    <div class="col-4">
