                                    }
                                    else
                                    {
                                        <div class="col-3">
                                            <label class="control-label">Estimated End Date</label>
                                            <input value="@DateTime.Now.AddMonths(Model.Request.Warranty??0)" name="WarrantyDate" class="form-control-plaintext border-bottom -plaintext" disabled="disabled" />
                                        </div>
                                    }

                                </div>
                                <br />
