@model int
@{ var select = "mdb-select" + Model;
    var dateClass = "paymentDate" + Model;
    var sumID = "NewPayments_" + Model + "__Sum";
    var sumName = "NewPayments[" + Model + "].Sum";
    var paymentDateID = "NewPayments_" + Model + "__PaymentDate";
    var paymentDateName = "NewPayments[" + Model + "].PaymentDate";
    var paymentTypeID = "NewPayments_" + Model + "__CompanyAccount_PaymentType";
    var paymentTypeName = "NewPayments[" + Model + "].CompanyAccount.PaymentType";
    var accountID = "NewPayments_" + Model + "__CompanyAccountID";
    var accountName = "NewPayments[" + Model + "].CompanyAccountID";
    var referenceID = "NewPayments_" + Model + "__Reference";
    var referenceName = "NewPayments_" + Model + "__Reference";}
<div class="row installments">
    <div class="col">
        <div class="form-group ">
            <input class="form-control-plaintext border-bottom sum-1" type="text" data-val="true" data-val-required="The Sum is required." id="@sumID" name="@sumName" value="" />

        </div>
    </div>
    <div class="col-4">
        <div class="form-group">
            <input class="form-control-plaintext border-bottom date-1 @dateClass" type="date" data-val="true" data-val-required="The PaymentDate field is required." id="@paymentDateID" name="@paymentDateName" value="" />
        </div>
    </div>
    <div class="col">
        <div class="payment-type">
            <select class="mdb-select @select custom select-dropdown form-control-plaintext paymentType type-1" id="@paymentTypeID" name="@paymentTypeName">
                <option value="">Select A Payment Type </option>
                <option value="1">Credit Card</option>
                <option value="2">Bank Account</option>
            </select>
        </div>
    </div>
    <div class="col">
        <div class="form-group payment-account">
            <select class="mdb-select  @select custom select-dropdown form-control-plaintext companyAccountNum account-1" name="@accountName" id="@accountID"></select>
            <span class="text-danger-centarix field-validation-valid" data-valmsg-for="NewPayments[' + increment + '].CompanyAccount.CompanyAccountID" data-valmsg-replace="true"></span>
        </div>
    </div>
    <div class="col">
        <div class="form-group payment-reference">
            <input class="form-control-plaintext border-bottom reference-1" type="text" data-val="true" data-val-required="The Reference Number is required." id="@referenceID" name="@referenceName" value="" />
        </div>
    </div>


</div>
<script src="~/js/validate.js"></script>