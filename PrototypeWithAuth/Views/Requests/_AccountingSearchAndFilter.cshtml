@model PrototypeWithAuth.ViewModels.RequestIndexPartialViewModelByVendor


    <div class="row">
        <div class="input-group col-3 offset-6">
@*            <span class="input-group-text "><i class=" icon-zoom_in-24px-01"></i></span>
*@            <input type="text" placeholder="Search by name/order no." class="mb-2 w-100 text search-by-name-or-order-num py-2 custom-input-gray " id="search"/>
        </div>
        
        <div class="col-2">
            <div class="form-group">
                @Html.DropDownListFor(
                        vm => vm.NotificationFilterViewModel.SelectedVendor,
                        new SelectList(
                        Model.NotificationFilterViewModel.Vendors,
                        dataValueField: "VendorID",
                        dataTextField: "VendorEnName"),

                        "Select a Vendor ",
                        htmlAttributes: new
                                {
                                    @class = "  mdb-select custom select-dropdown mb-2 w-100 section-custom-select search-by-vendor ",
                            @id = "vendors",
                                    @size = 1,
                                    @searchable = "Search Vendor",
                                    @data_stop_refresh = "true"
                                }
                        )
            </div>

        </div>
        <div class="col-1">
            <button type="button" id="invFilterPopover" data-toggle="popover" data-placement="bottom" data-trigger="focus" data-container="body"
                    class="text section-custom-input"  value="Filter">
                Filter <icon class=" pl-3 icon-filter_list_black_24dp" style="font-size: 24px;"></icon>
            </button>
        </div>    
        
            
        <div style="display:none;" id="inventoryFilterContent" class="container-fluid">
            @{
                await Html.RenderPartialAsync("_InventoryFilterResults", Model.InventoryFilterViewModel);
            }
        </div>

        
        <div id="inventoryFilterContentDiv" class="container inventoryFilterDiv"></div>
        
    </div>
    <script src="~/js/NotificationsFilterScript.js"></script>
