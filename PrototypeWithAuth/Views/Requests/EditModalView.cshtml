                                        <div class="form-group">
                                            <label class="control-label">Debt</label>
                                            <input class="form-control-plaintext border-bottom" value="Automatically calculate..." disabled />
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div id="documents" class="tab-pane fade">
                                <strong style="font-size: 1.7em;">Documents</strong>
                                <br /><hr /><br />

                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="card h-75">
                                            <div class="card-body text-center pt-5" style="height:150px; width:150px;">
                                                @if (Model.OrderFileStrings != null)
                                                {
                                                    foreach (var orderFile in Model.OrderFileStrings)
                                                    {
                                                        <button>View File @orderFile</button>
                                                    }
                                                }
                                                else
                                                {
                                                    <img src="~/images/css/inventory/add-item/other icons/order.png" alt="order" />
                                                }
                                            </div>
                                            <div class="card-footer">
                                                <div class="custom-file">
                                                    <input type="file" asp-for="OrderFiles" class="form-control-plaintext border-bottom  custom-file-input" value="+" multiple disabled />
                                                    <label class="custom-file-label">Choose File...</label>
                                                </div>
                                            </div>
                                        </div>
                                        <label class="control-label font-weight-bold text-center h-25" style="width:100%;">Order</label>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="card h-75">
                                            <div class="card-body">
                                                @if (Model.InvoiceFileStrings != null && Model.InvoiceFileStrings.Count > 1)
                                                {
                                                    <div id="carousel-slides-invoice" class="carousel slide" data-ride="carousel">
                                                        <ol class="carousel-indicators" @*style="background-color:#000000"*@>
                                                            <li data-target="#carousel-slides-invoice" data-slide-to="0" class="active"></li>
                                                            <li data-target="#carousel-slides-invoice" data-slide-to="1"></li>
                                                            <li data-target="#carousel-slides-invoice" data-slide-to="2"></li>
                                                        </ol>
                                                        <div class="carousel-inner">
                                                            @{string carouselClasses = "carousel-item active";}
                                                            @foreach (var invoiceFile in Model.InvoiceFileStrings)
