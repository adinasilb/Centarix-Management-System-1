@model PrototypeWithAuth.ViewModels.PaymentsPayModalViewModel

<script src="~/js/site.js" asp-append-version="true"></script>
<link href="~/css/site.css" rel="stylesheet" />
<div class="modal modal-view fader" id="myModal" data-backdrop="false">
    <div class="modal-dialog" style="min-width:1000PX !important; top: 20%; bottom: 0; margin-top: auto; margin-bottom:auto;">
        <div class="modal-content d-inline-block" style="border-radius:1rem;">
            <form action="" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12">
                            <button type="button" data-dismiss="modal" style="border-width: 0; background: transparent; font-size:1.5rem; font-weight:bold;" class="float-right mb-2">&times;</button>
                        </div>
                    </div>
                    <div class="container">
                        <div class="row">
                            <div class="col-6">
                                <h4 style="font-weight: bolder;">Pay @Model.Requests.FirstOrDefault().Product.Vendor.VendorEnName</h4>
                            </div>
                        </div>
                        <hr />
                        @{ 
                            var CostShekel = Model.Requests.Sum(r => r.Cost);
                            var VAT = Model.Requests.Sum(r => r.VAT);
                            var TotalShekel = CostShekel + VAT;
                        }
                        <div class="row">
                            <div class="col-4">
                                <div class="row">
                                    Sum
                                </div>
                                <div class="row">
                                    <div class="col-6 pl-0">
                                        <div class="input-group">
                                            <span class="input-group-text">&#x20aa;</span>
                                            <input value="@CostShekel" class="form-control-plaintext border-bottom" disabled />
                                        </div>
                                    </div>
                                    <div class="col-6 pl-0">
                                        <div class="input-group">
                                            <span class="input-group-text">&#36;</span>
                                            <input value="" class="form-control-plaintext border-bottom" disabled />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-4 px-3">
                                <div class="row">
                                    VAT
                                </div>
                                <div class="row">
                                    <div class="input-group">
                                        <span class="input-group-text">&#x20aa;</span>
                                        <input value="@VAT" class="form-control-plaintext border-bottom" disabled />
                                    </div>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="row">
                                    Sum
                                </div>
                                <div class="row">
                                    <div class="col-6 pl-0">
                                        <div class="input-group">
                                            <span class="input-group-text">&#x20aa;</span>
                                            <input value="@TotalShekel" class="form-control-plaintext border-bottom" disabled />
                                        </div>
                                    </div>
                                    <div class="col-6 pl-0">
                                        <div class="input-group">
                                            <span class="input-group-text">&#36;</span>
                                            <input value="" class="form-control-plaintext border-bottom" disabled />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-6">
                            @*<button class="btn inv-payments-button float-right">Paid</button>*@
                            <input type="submit" class="btn inv-payments-button float-right" value="Paid" />
                        </div>
                        <div class="col-6">
                            <button class="btn inv-clear-button float-left">Cancel</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>