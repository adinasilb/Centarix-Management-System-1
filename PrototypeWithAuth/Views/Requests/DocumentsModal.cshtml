@model PrototypeWithAuth.ViewModels.DocumentsModalViewModel;
<script src="~/js/DocumentModalJS.js" asp-append-version="true"></script>
@*<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>*@

<div class="modal modal-document fader" id="documentsModal" @*role="dialog" aria-labelledby="Request"*@ data-backdrop="false">
    <div class="modal-dialog reorder-modal  modal-sm " role="document">
        <div class="modal-content d-inline-block" style="border-radius:2rem;">
            <button type="button" class="close mr-4 mt-4" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <form action="" data-string="Requests/DocumentsModal" method="post" enctype="multipart/form-data" style="height: 100%; overflow: auto;" class="m-5" id="documentModalForm">
                @*<a style="display: none;" id="ReopenDocModal" href="@Url.ActionLink("DocumentsModal","Requests", new { id = @Model.Request.RequestID, RequestFolderNameEnum = @Model.RequestFolderName})"></a>*@
                <input type="hidden" asp-for="Request.RequestID" />
                <a href="" class="open-document-modal" data-string="@Model.RequestFolderName" data-id="@Model.Request.RequestID" style="display: none;"></a>
                <div class="modal-header">
                    <div class="container">
                        <div class="row">
                            <div class="col-2">
                                <h2>@Model.RequestFolderName</h2>
                            </div>
                            <div class="col-2 offset-8">
                                <div class="upload-btn-wrapper">
                                    <button class="inv-button btn-block float-right upload-file" data-string="@Model.RequestFolderName">Upload</button>
                                    <input type="file" asp-for="FilesToSave" class="file-select file-select-1" accept=".png, .jpg, .jpeg, .pdf" multiple>
                                </div>
                                @*<input type="submit" value="Save" asp-action="DocumentsModal" class="btn btn-block inv-button save-document-files" />*@
                                <input type="submit" value="Save" href="@Url.Action("DocumentsModal", "Requests")" class="btn btn-block inv-button save-document-files" />
                                @*<button class="btn inv-button save-document-files">Save</button>*@
                                @*@Html.ActionLink("Save", "DocumentsModal", new { documentsModalViewModel = Model }, new { @class = "btn inv-button save-document-files" })*@
                                @*@Html.ActionLink("Save", "DocumentsModal", new { }, new { @class = "btn inv-button save-document-files" })*@
                                @*<button class="btn inv-button save-document-files"  data-string="@Html.ActionLink("Save","SaveDocumentFiles", n)">Save</button>*@
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-body">
                    @if (Model.FileStrings != null)
                    {
                        <div id="carousel-example-multi" class="carousel slide carousel-multi-item v-2" data-ride="carousel">


                            <div class="controls-top">
                                <a class="btn-floating" href="#carousel-example-multi" data-slide="prev">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                                <a class="btn-floating" href="#carousel-example-multi" data-slide="next">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            </div>


                            <ol class="carousel-indicators">
                                <li data-target="#carousel-example-multi" data-slide-to="0" class="active"></li>
                                <li data-target="#carousel-example-multi" data-slide-to="1"></li>
                                <li data-target="#carousel-example-multi" data-slide-to="2"></li>
                            </ol>


                            <div class="carousel-inner v-2" role="listbox">
                                <div class="carousel-item active">
                                    <div class="col-12 col-md-4">
                                        <div class="card mb-2">
                                            <img class="card-img-top" src="@Model.FileStrings[0]"
                                                 alt="Card image cap">
                                            <div class="card-body">
                                                <h4 class="card-title font-weight-bold">@Model.FileStrings[0]</h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="carousel-item">
                                    <div class="col-12 col-md-4">
                                        <div class="card mb-2">
                                            <img class="card-img-top" src="@Model.FileStrings[1]"
                                                 alt="Card image cap">
                                            <div class="card-body">
                                                <h4 class="card-title font-weight-bold">@Model.FileStrings[1]</h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="carousel-item">
                                    <div class="col-12 col-md-4">
                                        <div class="card mb-2">
                                            <img class="card-img-top" src="@Model.FileStrings[2]"
                                                 alt="Card image cap">
                                            <div class="card-body">
                                                <h4 class="card-title font-weight-bold">@Model.FileStrings[2]</h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>
                    }
                </div>
            </form>
        </div>
    </div>
</div>
