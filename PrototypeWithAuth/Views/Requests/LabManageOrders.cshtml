@model PrototypeWithAuth.ViewModels.OrdersByVendorViewModel
@using PrototypeWithAuth.AppData
@{
    ViewData["Title"] = "LabManageOrders";
    Layout = "~/Views/Shared/RequestNavView.cshtml";

    if (Model.RequestsByVendor.Count() == 0)
    {
        <div>
            @{
                await Html.RenderPartialAsync("~/Views/Shared/_EmptyPageFull.cshtml", Model);
            }
        </div>
    }
    else
    {
        <form method="post" enctype="multipart/form-data" style="height: 100%; ">
            <table class="table table-headerspaced table-borderless table-hover item-table mb-5">
                <thead>
                    <tr class="text-center">
                        <td class="pb-0" width="15%"></td>
                        <td class="pb-0" style="width:20%;">
                            Item Name
                        </td>
                        <td class="pb-0" style="width:10%;">
                            Vendor
                        </td>
                        <td class="pb-0" style="width:10%">
                            Type
                        </td>
                        <td class="pb-0" style="width:10%">
                            Amount
                        </td>
                        <td class="pb-0" style="width:10%">
                            Price
                            <div class="d-inline-block">
                                @{
                                    await Html.RenderPartialAsync("_PricePopoverCart", Model);
                                }
                            </div>
                        </td>
                        <td class="pb-0" style="width:15%">
                            Requested By
                        </td>
                        <td class="pb-0" style="width:10%">
                        </td>
                    </tr>
                </thead>
                <tbody class="partial-orders">
                    @{
                        await Html.RenderPartialAsync("_LabManageOrders", Model);
                    }
                </tbody>
                </table>
            </form>
    }
}



