@model PrototypeWithAuth.Models.RequestList
@using PrototypeWithAuth.AppData

<script src="~/js/site.js" asp-append-version="true"></script>

<div class="modal modal-view deleteListModal" id="myModal" role="dialog" aria-labelledby="Request" data-backdrop="false" style="z-index:9101;">

    <div class="modal-dialog-centered elixir-modal-sm mx-auto " role="document" style="max-height:100%;">

        <div class="modal-content d-inline-block modal-border-radius modal-box-shadow ">
            <button type="button" class="close modal-close-padding modal-close-style" aria-label="Close" onclick="$.fn.CloseModal('delete-list');">
                <span aria-hidden="true">&times;</span>
            </button>
            <form action="" method="post" enctype="multipart/form-data" style="height: 100%; overflow: auto;" class="modal-padding deleteListForm" id="myForm">
                <input type="hidden" asp-for="ListID" />
                <div class="modal-header border-bottom modal-header-padding">
                    <span class="heading-1">Are you sure you would like to delete @Model.Title?</span>
                </div>
                <div class="modal-footer">
                    <div class="text-center mx-auto modal-footer-mt">
                        <button type="submit" class="custom-button custom-button-font section-bg-color between-button-margin delete-requestlist" value="@Model.ListID">Confirm</button>
                        <button type="button" class="custom-cancel custom-button " onclick="$.fn.CloseModal('delete-list');">Cancel</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="~/js/RequestLists.js"></script>