@model PrototypeWithAuth.ViewModels.TermsViewModel;
<script src="~/js/TermsModal.js"></script>
<div class="modal modal-view" id="myModal" role="dialog" aria-labelledby="Request" data-backdrop="false">
    <div class="modal-dialog modal-lg" role="document" style="max-height:100%; max-width:60rem; ">
        <div class="modal-content d-inline-block rounded" style="width:60rem;">
            <form action="" method="post" enctype="multipart/form-data" style="height: 100%; overflow: auto;">
                <input type="hidden" asp-for="ParentRequest.ParentRequestID" />
                <div class="modal-header">
                    <div class="col-10 float-left">
                        <h5>Terms</h5>
                    </div>
                </div>
                <div class="modal-body">
                    <div class="container">
                        <div class="row">
                            <div class="col-2">
                                <label asp-for="Paid" class="control-label"></label>
                                <select asp-for="Paid" class="form-control-plaintext border-bottom">
                                    <option value=false>Select</option>
                                    <option value=true>Yes</option>
                                    <option value=false>No</option>
                                </select>
                                <span asp-validation-for="Paid" class="text-danger"></span>
                            </div>
                            <div class="col-2">
                                <label asp-for="ParentRequest.Discount" class="control-label"></label>
                                <input type="text" asp-for="ParentRequest.Discount" class="form-control-plaintext border-bottom" />
                                <span asp-validation-for="ParentRequest.Discount" class="text-danger"></span>
                            </div>
                            <div class="col-2">
                                <label asp-for="Terms" class="control-label"></label>
                                <select asp-for="Terms" class="form-control-plaintext border-bottom">
                                    <option>Select</option>
                                    <option value="0">Pay Now</option>
                                    <option value="15">+15</option>
                                    <option value="30">+30</option>
                                    <option value="45">+45</option>
                                </select>
                                <span asp-validation-for="Terms" class="text-danger"></span>
                            </div>
                            <div class="col-2">
                                <label asp-for="ParentRequest.Taxes" class="control-label"></label>
                                <input type="text" asp-for="ParentRequest.Taxes" class="form-control-plaintext border-bottom" />
                                <span asp-validation-for="ParentRequest.Taxes" class="text-danger"></span>
                            </div>
                            <div class="col-2">
                                <label asp-for="ParentRequest.Shipping" class="control-label"></label>
                                <input type="text" asp-for="ParentRequest.Shipping" class="form-control-plaintext border-bottom" />
                                <span asp-validation-for="ParentRequest.Shipping" class="text-danger"></span>
                            </div>
                            <div class="col-2">
                                <label asp-for="ParentRequest.Credit" class="control-label"></label>
                                <input type="text" asp-for="ParentRequest.Credit" class="form-control-plaintext border-bottom" />
                                <span asp-validation-for="ParentRequest.Credit" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-2">
                                <div class="form-group">
                                    <label asp-for="Installments" class="control-label"></label>
                                    <input asp-for="Installments" min="1" class="form-control-plaintext border-bottom " />
                                    <span asp-validation-for="Installments" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="form-group payment-date">
                                    <label class="control-label">Payment Date</label>
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="form-group payment-type">
                                    <label class="control-label">Payment Type</label>
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="form-group payment-account">
                                    <label class="control-label">Account</label>
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="form-group payment-reference">
                                    <label class="control-label">Reference</label>
                                </div>
                            </div>
                        </div>
                        @*<table class="table table-sm payments-table">
                                <thead>
                                    <tr>
                                        <th class="control-label">Payment Date</th>
                                        <th class="control-label">Payment Type</th>
                                        <th class="control-label">Account</th>
                                        <th class="control-label">Reference</th>
                                    </tr>
                                </thead>
                            </table>*@
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" asp value="Save" class="inv-button" asp-action="TermsModal" />
                </div>
            </form>
        </div>
    </div>
</div>
