@model PrototypeWithAuth.ViewModels.ReceivedModalSublocationsViewModel

@for(int i= 0; i < Model.locationTypeNames.Count;i++)
{
    <div class="form-group col-md-12">
        <label class="control-label">@Model.locationTypeNames[i]</label>
        @if (i == 0){
            @Html.DropDownListFor(m => m.locationInstancesSelected[i],
           new SelectList(Model.locationInstancesDepthZero, "LocationInstanceID", "LocationInstanceName"),
    "Select " + Model.locationTypeNames[i], new { @class = "form-control-plaintext border-bottom SLI", @id = Model.locationTypeNames[i] })
    }
        else
            {
            <select asp-for="locationInstancesSelected[i]" class="form-control-plaintext border-bottom SLI" id="@Model.locationTypeNames[i]">

            </select>
        }
    </div>
    <br />
}