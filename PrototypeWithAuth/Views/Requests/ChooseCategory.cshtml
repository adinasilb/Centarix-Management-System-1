                <input type="checkbox" class="form-check-input filled-in" asp-for="isRequestQuote"/>
               <label class="form-check-label" asp-for="isRequestQuote">Request</label>
            </div>*@
            <input type="button" value="Save" id="submitCategory" class="text custom-order-inv custom-button mt-lg-4" />
        </div>
    </form>
</div>
