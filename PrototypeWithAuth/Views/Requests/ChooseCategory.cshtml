@model PrototypeWithAuth.ViewModels.ChooseCategoryViewModel
@using PrototypeWithAuth.AppData
@{
    Layout = null;
}

<div class="m-4">
    <div class="heading-1">Item Category</div>
    <form action="" id="myForm" class="categoryForm" method="post" enctype="multipart/form-data">
        <div class="card-body">
            Choose a Category:
            <div class="form-group my-4">
                @Html.DropDownListFor(c => c.SelectedCategory,
new SelectList(Model.ParentCategories, "ParentCategoryID", "ParentCategoryDescription"), "Select a Category",
new { @class = "mdb-select custom select-dropdown form-control-plaintext", @id = "categorylist", @searchable = "Select Category" })
                <span asp-validation-for="SelectedCategory" class="text-danger-centarix"></span>
            </div>
