            @Html.DisplayFor(model => model.Request.Product.Vendor.VendorEnName)*@


                </div>
                <div class="modal-footer">
                    <div class="text-center mx-auto modal-footer-mt">
                        <button type="submit" asp-action="DeleteModal" class="custom-button custom-button-font @bcColor between-button-margin" value="@Model.Request.RequestID">Confirm</button>
                        <button type="button" class="custom-cancel custom-button " @*data-dismiss="modal"*@ onclick="$.fn.CloseModal('delete-item');">Cancel</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>
