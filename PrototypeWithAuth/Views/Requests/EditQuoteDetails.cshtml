@model PrototypeWithAuth.ViewModels.EditQuoteDetailsViewModel
@using PrototypeWithAuth.AppData


<script src="~/js/site.js" asp-append-version="true"></script>

<script src="~/js/validate.js" asp-append-version="true"></script>
<script src="~/js/Validation/EditQuoteDetailsFormValidation.js"></script>
<script src="~/js/InitializeDatePicker.js"></script>
<script src="~/js/WarantySupplyDateCalc.js"></script>
<div class="modal modal-view fader on-form-modal" id="myModal" role="dialog" aria-labelledby="Request" data-backdrop="false">

    <div class="modal-dialog-centered  mx-auto  modal-xl " role="document">

        <div class="modal-content d-inline-block modal-border-radius modal-box-shadow supplier-form ">
            <button type="button" class="close modal-close-padding modal-close-style" data-dismiss="modal" aria-label="Close" onclick="$(this).closest('.modal').modal('hide');">
                <span aria-hidden="true">&times;</span>
            </button>
            <form action="" method="post" id="myForm" enctype="multipart/form-data" style="height: 100%;" class="modal-padding editQuoteDetails">

                @*
                    NOTE: The select boxes are disabled as they cannot be edited, yet in order to pass the values into the controlller-
                        they need the hiddenfors that are right underneath it
                *@
                <div asp-validation-summary="ModelOnly" class="text-danger-centarix"></div>
                <!-- Modal Header -->
                <div class="new-modal-header no-box-shadow"
                     @if (TempData["ErrorMessage"] != null) {<h6 class="text-danger-centarix">@TempData["ErrorMessage"]</h6>
                        <br />
                    }

                    <div class="form-group">
                        <div class="row  modal-header-padding">
                            <div class="col-3">
                                <div class="heading-1">Update Quote</div>
                            </div>
                            <div class="col-2">
                                <div class="top-menu">@Model.Vendor.VendorEnName</div>
                            </div>
                            <input type="hidden" asp-for="@Model.Vendor.VendorID" />
                            <input type="hidden" asp-for="@Model.ParentQuoteID" />
                            <div class="col-4">
                                <div class="form-group d-inline-flex">
                                    <label asp-for="@Model.QuoteNumber" class="control-label m-0 mt-2" style="width:100%;"></label>
                                    <input asp-for="@Model.QuoteNumber" class="no-arrow-input form-control-plaintext border-bottom align-with-select timeline-light-item-orange p-0 m-0" min="1" required />
                                    <span asp-validation-for="@Model.QuoteNumber" class="text-danger-centarix"></span>
                                </div>
                            </div>

                            <div class="col-3">
                                <div class="form-group d-inline-flex">
                                    <label asp-for="@Model.QuoteDate" class="control-label m-0 mt-2" style="width:100%;"></label>
                                    <input asp-for="@Model.QuoteDate" class="form-control-plaintext border-bottom for-supply-date-calc align-with-select m-0 ml-2 p-0" min="1" readonly />
                                    <span asp-validation-for="@Model.QuoteDate" class="text-danger-centarix"></span>
                                </div>
                            </div>

                        </div>
                        <div class="container p-0">
                            <div class="row">
                                <div class="col-12"><hr  /></div>
                            </div>
                        </div>
                        <table class="table table-headerspaced table-borderless">
                            <thead>
                                <tr>
                                    <td class="pb-0" width="15%"></td>
                                    <td class="pb-0" style="width:15%;">
                                        Name
                                    </td>
                                    <td class="pb-0" style="width:15%;">
                                        Units
                                    </td>
                                    <td class="pb-0" style="width:15%">
                                        TotalPrice
                                    </td>
                                    <td class="pb-0" style="width:15%">
                                        Expected Supply Days
                                    </td>
                                    <td class="pb-0" style="width:15%">
                                        Expected Supply Date
                                    </td>
                                </tr>
                            </thead>
                            <tbody>

                                @for (int i = 0; i < Model.Requests.Count(); i++)
                                {
                                    @Html.HiddenFor(model => Model.Requests[i].RequestID)
                                    <tr class="">
                                        <td class="" width="15%">
                                            <input type="hidden" asp-for="@Model.Requests[i].RequestID" />
                                            @if (Model.Requests[i].Product.ProductSubcategory.ImageURL != null)
                                            {
                                                var imageurl = Model.Requests[i].Product.ProductSubcategory.ImageURL;
                                                <img src="@imageurl" alt="Image" width="75" class="category-image" />
                                            }
                                            else
                                            {
                                                <img src="~/images/css/accounting/sample_image.png" alt="Image" width="75" class="category-image" />
                                            }
                                        </td>
                                        <td width="15%">
                                            @Model.Requests[i].Product.Vendor.VendorEnName
                                        </td>
                                        <td width="15%">
                                            @Model.Requests[i].Unit &nbsp;@Model.Requests[i].UnitType.UnitTypeDescription
                                            @if (Model.Requests[i].SubUnitType != null)
                                            {
                                                <br />
                                                @Model.Requests[i].SubUnit @Model.Requests[i].SubUnitType.UnitTypeDescription
                                                @if (Model.Requests[i].SubSubUnitType != null)
                                                {
                                                    <br />@Model.Requests[i].SubSubUnit @Model.Requests[i].SubSubUnitType.UnitTypeDescription
                                                }
                                            }
                                        </td>
                                        <td width="15%">
                                            <div class="form-group">
                                                <input asp-for="@Model.Requests[i].Cost" class="form-control-plaintext border-bottom cost-validation" min="1" />
                                                <span asp-validation-for="@Model.Requests[i].Cost" class="text-danger-centarix"></span>
                                            </div>
                                        </td>
                                        <td width="15%">
                                            <div class="form-group">
                                                <input asp-for="@Model.Requests[i].ExpectedSupplyDays" class="form-control-plaintext border-bottom  expected-supply-days" />
                                                <span asp-validation-for="@Model.Requests[i].ExpectedSupplyDays" class="text-danger-centarix"></span>
                                            </div>
                                        </td>
                                        <td width="15%" class="border-right">
                                            <div class="form-group">
                                                <input value="" class="form-control-plaintext border-bottom datepicker " type="text" name="expected-supply-days" id="expected-supply-date" />
                                            </div>
                                        </td>
                                    </tr>
                                }
                                <tr class="border-0  no-hover ">
                                    <td colspan="3" class="p-0">
                                        <input type="file" asp-for="@Model.QuoteFileUpload" class="  form-control-file-lab pt-1  modal-footer-mt">
                                    </td>
                                    <td colspan="4"  class="p-0 ">
                                        <div class="form-group text-center modal-footer-mt">
                                            <input type="submit" asp-action="EditQuoteDetails" name="OrderType" value="Save" class="custom-button between-button-margin custom-button-font lab-man-background-color" />
                                            <button type="button" class="custom-cancel custom-button px-5" data-dismiss="modal" onclick="$(this).closest('.modal').modal('hide');">Cancel</button>
                                        </div>
                                    </td>

                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@*Javascript that filters according to which parentcategory is selected, you must have the function in the controller for GetSubcategory*@
@*This will work for the EDIT (putting in the already loaded product subcategory)*@
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
