@model PrototypeWithAuth.ViewModels.RequestItemViewModel


<script src="~/js/site.js" asp-append-version="true"></script>

<div class="modal-dialog  modal-dialog-scrollable modal-lg  modal-view">

    <div class="modal-content d-inline-block">


        <form asp-action="ModalView" method="post" enctype="multipart/form-data" style="height: 100%; overflow: auto;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Request.RequestID" />
            <!-- Modal Header -->
            <div class="modal-header border-bottom-0">
                @if (TempData["ErrorMessage"] != null)
                {
                    <h6 class="text-danger">@TempData["ErrorMessage"]</h6>
                }
                <h4 class="modal-title"><input asp-for="Request.Product.ProductName" /></h4>
                <span asp-validation-for="Request.Product.ProductName"></span>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <div class="container-fluid div-tabs">

                    <ul class="nav nav-tabs">
                        <li class="active"><a data-toggle="tab" href="#item" class="btn btn-outline-secondary">Item</a></li>
                        <li><a data-toggle="tab" href="#location" class="btn btn-outline-secondary">Location</a></li>
                        <li><a data-toggle="tab" href="#price" class="btn btn-outline-secondary">Price</a></li>
                        <li><a data-toggle="tab" href="#documents" class="btn btn-outline-secondary">Documents</a></li>
                        <li><a data-toggle="tab" href="#comments" class="btn btn-outline-secondary">Comments</a></li>
                    </ul>

                    <div class="tab-content">
                        <div id="item" class="tab-pane fade in active">
                            <h3>ITEM</h3>
                            <hr />
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="Request.Product.ProductSubcategory.ParentCategory.ParentCategoryDescription" class="control-label"></label>
                                        @Html.DropDownListFor(c => c.Request.Product.ProductSubcategory.ParentCategoryID,
     new SelectList(Model.ParentCategories, "ParentCategoryID", "ParentCategoryDescription"),
     "Select Category", new { @class = "form-control", @id = "parentlist" })
                                        <span asp-validation-for="Request.Product.ProductSubcategory.ParentCategoryID" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group sublist">
                                        <label asp-for="Request.Product.ProductSubcategory.ProductSubcategoryDescription" class="control-label"></label>
                                        @Html.DropDownListFor(vm => vm.Request.Product.ProductSubcategoryID,
     new SelectList(Model.ProductSubcategories, "ProductSubcategoryID", "ProductSubcategoryDescription"),
     "Select Subcategory", new { @class = "form-control", @id = "sublist" })
                                        <span asp-validation-for="Request.Product.ProductSubcategoryID" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label class="control-label">Project:</label>
                                        <select class="form-control"></select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label class="control-label">Sub Project:</label>
                                        <select class="form-control"></select>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="Request.Product.Vendor" class="control-label"></label>
                                        @Html.DropDownListFor(
         vm => vm.Request.Product.VendorID,
         new SelectList(
             Model.Vendors,
             dataValueField: "VendorID",
             dataTextField: "VendorEnName"),
         optionLabel: "Select A Vendor", //FUTURE: Ask If we should put in the functionality to create a new vendor here rather than just choosing
         htmlAttributes: new { @class = "form-control", @id = "vendorList" }
     )
                                        <span asp-validation-for="Request.Product.Vendor.VendorID" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        @* IN MIDDLE *@
                                        <label asp-for="Request.Product.Vendor.VendorBuisnessID" class="control-label"></label>
                                        <label class="vendorBusinessId form-control-plaintext" />
                                        @*don't need a validation here because you it's not saving*@
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label asp-for="Request.ParentRequest.OrderNumber" class="control-label"></label>
                                    <input asp-for="Request.ParentRequest.OrderNumber" class="form-control" />
                                    <span asp-validation-for="Request.ParentRequest.OrderNumber" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Request.ParentRequest.OrderDate" class="control-label"></label>
                                    <input asp-for="Request.ParentRequest.OrderDate" class="form-control" />
                                    <span asp-validation-for="Request.ParentRequest.OrderDate" class="text-danger" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label asp-for="Request.ParentRequest.InvoiceNumber" class="control-label"></label>
                                    <input asp-for="Request.ParentRequest.InvoiceNumber" class="form-control" />
                                    <span asp-validation-for="Request.ParentRequest.InvoiceNumber" class="text-danger" />
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Request.ParentRequest.InvoiceDate" class="control-label"></label>
                                    <input asp-for="Request.ParentRequest.InvoiceDate" class="form-control" />
                                    <span asp-validation-for="Request.ParentRequest.InvoiceDate" class="text-danger" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label asp-for="Request.CatalogNumber" class="control-label"></label>
                                    <input asp-for="Request.CatalogNumber" class="form-control" />
                                    <span asp-validation-for="Request.CatalogNumber" class="text-danger"></span>
                                </div>
                                <div class="col-md-3">
                                    <label asp-for="Request.Warranty" class="control-label"></label>
                                    <input asp-for="Request.Warranty" class="form-control" />
                                    <span asp-validation-for="Request.Warranty" class="text-danger"></span>
                                </div>
                                <div class="col-md-3">
                                    <label class="control-label">End Date</label>
                                    @{ 
                                        //get this just to return the date (not the time)
                                        //adding the amount of months of the warranty to the invoice date
                                        var endWarrantyDate = Model.Request.ParentRequest.InvoiceDate.AddMonths(Model.Request.Warranty).Date;
                                    }
                                    <input value="@endWarrantyDate" class="form-control-plaintext" disabled="disabled" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <label asp-for="Request.ExpectedSupplyDays" class="control-label"></label>
                                    <input asp-for="Request.ExpectedSupplyDays" class="form-control" />
                                    <span asp-validation-for="Request.ExpectedSupplyDays" class="text-danger"></span>
                                </div>
                                <div class="col-md-4">
                                    @{
                                        //get this just to return the date (not the time)
                                        //adding the amount of months of the expected supply days to the invoice date
                                        var endSupplyDate = Model.Request.ParentRequest.InvoiceDate.AddDays(Model.Request.ExpectedSupplyDays);
                                    }
                                    <label class="control-label">Expected supply date</label>
                                    <input value="@endSupplyDate" class="form-control-plaintext" disabled="disabled" />
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="Request.URL" class="control-label"></label>
                                    <input asp-for="Request.URL" class="form-control" />
                                    <span asp-validation-for="Request.URL" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div id="location" class="tab-pane fade">
                            <h3>LOCATION</h3>
                            <p>Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
                        </div>
                        <div id="price" class="tab-pane fade">
                            <h3>PRICE</h3>
                            <p>Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium, totam rem aperiam.</p>
                        </div>
                        <div id="documents" class="tab-pane fade">
                            <h3>DOCUMENTS</h3>
                            <hr />
                            <div class="row">
                                <div class="col-md-3">
                                    <label class="control-label">Order Doc</label>
                                    <input type="file" multiple name="order-docs" id="order-docs file" class="form-control-file" value="ActionHandlerForForm" />
                                   
                                    <span class="text-danger"></span>
                                </div>
                                <div class="col-md-3">
                                    <label class="control-label">Invoice Doc</label>
                                    <input type="file" multiple name="invoice-docs" id="invoice-docs file" class="form-control-file" />
                                    <span class="text-danger"></span>
                                </div>
                                <div class="col-md-3">
                                    <label class="control-label">Shipment Doc</label>
                                    <input type="file" multiple name="shipment-docs" id="shipment-docs file" class="form-control-file" />
                                    <span class="text-danger"></span>
                                </div>
                                <div class="col-md-3">
                                    <label class="control-label">Quote Doc</label>
                                    <input type="file" multiple name="quote-docs" id="quote-docs file" class="form-control-file" />
                                    <span class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3">
                                    <label class="control-label">Info Doc</label>
                                    <input type="file" multiple name="info-docs" id="info-docs file" class="form-control-file" />
                                    <span class="text-danger"></span>
                                </div>
                                <div class="col-md-3">
                                    <label class="control-label">Pictures Doc</label>
                                    <input type="file" multiple name="pictures-docs" id="pictures-docs file" class="form-control-file" />
                                    <span class="text-danger"></span>
                                </div>
                                <div class="col-md-3">
                                    <label class="control-label">Return Doc</label>
                                    <input type="file" multiple name="return-docs" id="return-docs file" class="form-control-file" />
                                    <span class="text-danger"></span>
                                </div>
                                <div class="col-md-3">
                                    <label class="control-label">Credit Doc</label>
                                    <input type="file" multiple name="credit-docs" id="credit-docs file" class="form-control-file" />
                                    <span class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div id="comments" class="tab-pane fade">
                            <h3>COMMENTS</h3>
                            <p>Eaque ipsa quae ab illo inventore veritatis et quasi architecto beatae vitae dicta sunt explicabo.</p>
                        </div>
                    </div>

                </div>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-outline-primary" />
                    @*@Html.ActionLink("Delete", "Delete", new { @id = Model.Product.ProductID }, new { @class = "btn btn-outline-danger" })*@
                    <button type="button" class="btn btn-outline-info" data-dismiss="modal">Close</button>
                </div>
            </div>

            @*Begin Hidden Inputs:*@
            @Html.HiddenFor(vm => vm.Request.ProductID)
            @Html.HiddenFor(vm => vm.Request.Product.ProductSubcategory.ParentCategoryID)
            @Html.HiddenFor(vm => vm.Request.Product.ProductSubcategory.ProductSubcategoryDescription)
            @Html.HiddenFor(vm => vm.Request.RequestStatusID)
            @*End Hidden Inputs*@

            @*Hidden Input for Product Subcategory*@
            @Html.HiddenFor(vm => vm.Request.Product.ProductSubcategory.ProductSubcategoryDescription)
        </form>

    </div>


</div>

