@model PrototypeWithAuth.ViewModels.AddNewItemViewModel

<div class="modal-dialog  modal-dialog-scrollable modal-lg  modal-view">

    <div class="modal-content">


        <form asp-action="Edit" method="post" style="height: 100%; overflow: auto;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Request.RequestID" />
            <!-- Modal Header -->
            <div class="modal-header border-bottom-0">
                <h4 class="modal-title">@Model.Request.Product.ProductName</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <div class="container-fluid">

                    <ul class="nav nav-tabs">
                        <li class="active"><a data-toggle="tab" href="#item" class="btn btn-outline-secondary">Item</a></li>
                        <li><a data-toggle="tab" href="#location" class="btn btn-outline-secondary">Location</a></li>
                        <li><a data-toggle="tab" href="#price" class="btn btn-outline-secondary">Price</a></li>
                        <li><a data-toggle="tab" href="#documents" class="btn btn-outline-secondary">Documents</a></li>
                        <li><a data-toggle="tab" href="#comments" class="btn btn-outline-secondary">Comments</a></li>
                    </ul>

                    <div class="tab-content">
                        <div id="item" class="tab-pane fade in active">
                            <h3>ITEM</h3>
                            <hr />
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="Product.ProductSubcategory.ParentCategory.ParentCategoryDescription" class="control-label"></label>
                                        @Html.DropDownListFor(c => c.Product.ProductSubcategory.ParentCategoryID,
                                        new SelectList(Model.ParentCategories, "ParentCategoryID", "ParentCategoryDescription"),
                                        "Select Category", new { @class = "form-control", @id = "parentlist" })
                                        <span asp-validation-for="Product.ProductSubcategory.ParentCategoryID" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    @******NOT WORKING******@
                                    <label asp-for="Product.ProductSubcategory.ProductSubcategoryDescription" class="control-label"></label>
                                    <select name="Product.ProductSubcategoryID" id="sublist" class="form-control"></select>
                                    <span asp-validation-for="Product.ProductSubcategoryID" class="text-danger"></span>
                                </div>
                                <div class="col-md-4">
                                    <label class="control-label">Project:</label>
                                    <select class="form-control"></select>
                                </div>
                                <div class="col-md-4">
                                    <label class="control-label">Sub Project:</label>
                                    <select class="form-control"></select>
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="Product.Vendor" class="control-label"></label>
                                    @Html.DropDownListFor(
                                        vm => vm.Product.VendorID,
                                        new SelectList(
                                            Model.Vendors,
                                            dataValueField: "VendorID",
                                            dataTextField: "VendorEnName"),
                                        optionLabel: "Select A Vendor", //FUTURE: Ask If we should put in the functionality to create a new vendor here rather than just choosing
                                        htmlAttributes: new { @class = "form-control" }
                                    )
                                    <span asp-validation-for="Product.Vendor.VendorID" class="text-danger"></span>
                                </div>
                                <div class="col-md-4">
                                    <label class="control-label">Vendor#</label>
                                    <input class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div id="location" class="tab-pane fade">
                            <h3>LOCATION</h3>
                            <p>Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
                        </div>
                        <div id="price" class="tab-pane fade">
                            <h3>PRICE</h3>
                            <p>Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium, totam rem aperiam.</p>
                        </div>
                        <div id="documents" class="tab-pane fade">
                            <h3>DOCUMENTS</h3>
                            <p>Eaque ipsa quae ab illo inventore veritatis et quasi architecto beatae vitae dicta sunt explicabo.</p>
                        </div>
                        <div id="comments" class="tab-pane fade">
                            <h3>COMMENTS</h3>
                            <p>Eaque ipsa quae ab illo inventore veritatis et quasi architecto beatae vitae dicta sunt explicabo.</p>
                        </div>
                    </div>

                </div>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-outline-primary" />
                    @*@Html.ActionLink("Delete", "Delete", new { @id = Model.Product.ProductID }, new { @class = "btn btn-outline-danger" })*@
                    <button type="button" class="btn btn-outline-info" data-dismiss="modal">Close</button>
                </div>
            </div>

        </form>

    </div>


</div>

