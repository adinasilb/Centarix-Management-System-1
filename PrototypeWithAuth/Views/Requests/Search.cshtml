@model PrototypeWithAuth.ViewModels.RequestsSearchViewModel
@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/View.cshtml";
}
@*<div class="modal modal-view  right faid " id="myModal" role="dialog" aria-labelledby="Request" data-backdrop="false">*@

<form action="" method="post" enctype="multipart/form-data" id="request-search">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row mt-5">
        <div class="col-2 offset-1 mt-3">
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="1" [filledIn]="true">
                <label class="form-check-label checkbox-bottom-label" for="1">Material unchecked</label>
            </div>
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="2" [filledIn]="true">
                <label class="form-check-label checkbox-bottom-label" for="2">Material unchecked</label>
            </div>
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="3" [filledIn]="true">
                <label class="form-check-label checkbox-bottom-label" for="3">Material unchecked</label>
            </div>
        </div>
        <div class="card col-6 custom-box-shadow" style="width:700px">
            <div class="card-body">
                <div class="row mt-5">
                    <div class="col-md-2">
                        <img src="~/images/css/inventory/Type/bottle.png" />
                    </div>
                    <div class="col-md-7">
                        <div class="md-form">
                            <input asp-for="Request.Product.ProductName" class="form-control-plaintext border-bottom" />
                            <label asp-for="Request.Product.ProductName" class="control-label grey-text"></label>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <input type="submit" value="Search" class="btn btn-block btn-default" style="border-radius:0px !important;" />
                    </div>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-10 offset-2">
                            <ul class="nav nav-tabs text-center" style="border:none;">
                                <li class="nav-item"><a data-toggle="tab" href="#item" class="nav-link"><img src="~/images/css/inventory/add-item/item.png" alt="Item" /><br />Item</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="tab-content">
                    <div id="item" class="tab-pane fade in active">
                        <div class="card border" style="border-radius:0;">
                            <div class="card-body">

                                <div class="row">
                                    <div class="col-4">
                                        <div class="md-form text-black-50">
                                            @Html.DropDownListFor(
                                                X => X.Request.Product.ProductSubcategory.ParentCategoryID,
                                                new SelectList(
                                                    Model.ParentCategories,
                                                    "ParentCategoryID",
                                                    "ParentCategoryDescription"),
                                                "Please select a category",
                                                new { @class = "mdb-select dropdown-default pt-2", @id = "parentlist", @searchable = "Search here..." }
                                            )
                                            <label asp-for="Request.Product.ProductSubcategory.ParentCategoryID" class="mdb-main-label custom-mdb-label text-black-50">Category</label>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="md-form">
                                            @Html.DropDownListFor(
                                                vm => vm.Request.Product.ProductSubcategoryID,
                                                new SelectList(Model.ProductSubcategories, "ProductSubcategoryID", "ProductSubcategoryDescription"),
                                                "Select Subcategory", new { @class = "mdb-select pt-2 dropdown-default", @id = "sublist", @searchable = "Search here..." })
                                            <label asp-for="Request.Product.ProductSubcategoryID" class="mdb-main-label custom-mdb-label text-black-50">Subcategory</label>
                                            <span asp-validation-for="Request.Product.ProductSubcategoryID" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="md-form">
                                            @*placeholder*@
                                            <select name="Project" class="mdb-select pt-2 dropdown-default" searchable="Search here...">
                                                <option>Select a project</option>
                                            </select>
                                            <label class="mdb-main-label custom-mdb-label text-black-50">Project</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-4">
                                        <div class="md-form">
                                            @*placeholder*@
                                            <select name="Project" class="mdb-select pt-2 dropdown-default" searchable="Search here...">
                                                <option>Select a sub project</option>
                                            </select>
                                            <label class="mdb-main-label custom-mdb-label text-black-50">Sub Project</label>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="md-form">
                                            @Html.DropDownListFor(
                                                x => x.Request.Product.VendorID,
                                                new SelectList(
                                                    Model.Vendors,
                                                    dataValueField: "VendorID",
                                                    dataTextField: "VendorEnName"),
                                                optionLabel: "Select A Supplier",
                                                htmlAttributes: new { @class = "mdb-select pt-2 dropdown-default", @id = "vendorList", @searchable="Search here..." })
                                            <label asp-for="Request.Product.VendorID" class="mdb-main-label custom-mdb-label text-black-50">Supplier</label>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="md-form">
                                            @* IN MIDDLE *@
                                            @Html.DropDownListFor(
                                               x => x.Request.Product.VendorID,
                                               new SelectList(
                                                   Model.Vendors,
                                                   dataValueField: "VendorID",
                                                   dataTextField: "VendorBuisnessID"),
                                               optionLabel: "Select Supplier ID",
                                               htmlAttributes: new { @class = "mdb-select pt-2 dropdown-default", @id = "vendorBusinessIDList", @searchable="Search here..." })
                                            <label class="mdb-main-label custom-mdb-label text-black-50">Supplier ID</label>
                                            @*<label class="vendorBusinessId form-control-plaintext border-bottom" />*@
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <div class="md-form">
                                            <input asp-for="Request.ParentRequest.OrderNumber" class="form-control" />
                                            <label asp-for="Request.ParentRequest.OrderNumber" class="custom-mdb-label text-black-50 mb-5"></label>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="md-form">
                                            <input asp-for="Request.ParentRequest.OrderDate" class="form-control datepicker" />
                                            <label asp-for="Request.ParentRequest.OrderDate"></label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <div class="md-form">
                                            <label asp-for="Request.ParentRequest.InvoiceNumber" class="control-label"></label>
                                            <input asp-for="Request.ParentRequest.InvoiceNumber" class="form-control-plaintext border-bottom" />
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="md-form">
                                            <label asp-for="Request.ParentRequest.InvoiceDate" class="control-label"></label>
                                            <input asp-for="Request.ParentRequest.InvoiceDate" class="form-control-plaintext border-bottom" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <div class="md-form">
                                            <label asp-for="Request.CatalogNumber" class="control-label"></label>
                                            <input asp-for="Request.CatalogNumber" class="form-control-plaintext border-bottom" />
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="md-form">
                                            <label asp-for="Request.Warranty" class="control-label"></label>
                                            <input asp-for="Request.Warranty" class="form-control-plaintext border-bottom" />
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <label class="control-label">End Date</label>
                                        <input asp-for="WarrantyEndDate" class="form-control-plaintext border-bottom" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="md-form">
                                            <label asp-for="Request.ExpectedSupplyDays" class="control-label">Expected supply days</label>
                                            <input asp-for="Request.ExpectedSupplyDays" class="form-control-plaintext border-bottom" />
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        @{
                                            //get this just to return the date (not the time)
                                            //adding the amount of months of the expected supply days to the invoice date
                                            var endSupplyDate = Model.Request.ParentRequest.InvoiceDate.AddDays(Model.Request.ExpectedSupplyDays);
                                        }
                                        <div class="md-form">
                                            <label class="control-label">Expected supply date</label>
                                            <input value="@endSupplyDate" class="form-control-plaintext border-bottom" disabled="disabled" />
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="md-form">
                                            <label asp-for="Request.URL" class="control-label"></label>
                                            <input asp-for="Request.URL" class="form-control-plaintext border-bottom" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="md-form">
                                            <label class="control-label">From Date</label>
                                            <input asp-for="FromDate" type="date" class="form-control-plaintext border-bottom" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="md-form">
                                            <label class="control-label">Until Date</label>
                                            <input asp-for="ToDate" type="date" class="form-control-plaintext border-bottom" />
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>