@model PrototypeWithAuth.ViewModels._ParticipantsViewModel

@{
    var numberOfParticipants = Model.Experiment.Participants == null ? "0" : Model.Experiment.Participants.Count().ToString();
}

<div class="row under-row-margin">
    <div class="col-12">
        <label class="heading-1 mr-4">
            @Model.Experiment.Description
        </label>
        <label class="sub-header align-bottom pt-2">
            Participants &nbsp;&nbsp; <span class="biomarkers-color"><span id="NumberOfParticipants">@numberOfParticipants</span>/@Model.Experiment.NumberOfParticipants.ToString()</span>
        </label>
        <button value="@Model.Experiment.ExperimentID" type="button" class="add-new float-right custom-button custom-button-font clear-custom-button biomarkers-color white-background biomarkers-border-color">+ Add New Participant</button>
    </div>
</div>

<table class="table table-headerspaced table-noheaderlines table-hover mb-0">
    <thead>
        <tr class="text-center">
            @foreach (var header in Model.Headers)
            {
                <th width="10%" class="p-0">
                    <label>@header.Value</label>
                </th>
            }
        </tr>
    </thead>
</table>
<table class="table table-headerspaced table-noheaderlines table-hover ">
    <tbody>
        @foreach (var row in Model.Rows)
        {
            <tr class="text-center one-row" style="height: 7.313rem;">
                @foreach (var value in row)
                {

                    <td width="10%" class="p-0">
                        @if (value.Link != "" && value.Link != null)
                        {
                            <a class="btn p-0 m-0 inv-link-clr @value.Link no-box-shadow" value="@value.ID" data-toggle="tooltip" data-placement="top" data-target="item" href="@Url.Action(value.Link, "Biomarkers", new { ID = value.ID })">
                                <div class="d-block" style="/*overflow:hidden; text-overflow:ellipsis; white-space:nowrap;max-width:200px;*/">
                                    <p class="m-0 text-center" style="overflow: hidden; text-overflow: ellipsis; -webkit-line-clamp: 3; -webkit-box-orient: vertical; max-height: 5rem; display: -webkit-box; /*white-space:nowrap*/">@value.Value</p>
                                </div>
                            </a>
                        }
                        else
                        {
                            <label class="m-0 p-0">@value.Value</label>
                        }
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

<script>
    $(".add-new").off("click").on("click", function (e) {
        e.preventDefault();
        $.ajax({
            async: true,
            url: "/Biomarkers/AddParticipantModal?ID=" + $(this).val(),
            traditional: true,
            type: "GET",
            cache: false,
            success: function (data) {
                $.fn.OpenModal('add-participant-modal', 'add-participant', data);
                return false;
            }
        });
    });
</script>