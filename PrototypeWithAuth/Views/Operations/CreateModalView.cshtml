                                                <div class="card document-border" style="height:86%">
                                                    <div class="card-body text-center" style="height:150px;">
                                                        <img src="~/images/css/inventory/add-item/other icons/info_dis.png" style="margin-top:3rem;" alt="order" class="@filterClass" />
                                                    </div>
                                                </div>
                                            </a>
                                            <label class="control-label text-center" style="width:100%; line-height:2.5;">Info</label>
                                        </div>
                                        <div class="col-md-3 mb-4">
                                            @{
                                                filterClass = "";
                                                if (Model.PictureFileStrings != null && Model.PictureFileStrings.Count > 0)
                                                {
                                                    filterClass = "oper-filter";
                                                }
                                            }
                                            <a href="" class="open-document-modal" data-string="@AppUtility.RequestFolderNamesEnum.Pictures.ToString()" data-id="@Model.Request.RequestID" id="@AppUtility.RequestFolderNamesEnum.Pictures.ToString()" data-val="@true">
