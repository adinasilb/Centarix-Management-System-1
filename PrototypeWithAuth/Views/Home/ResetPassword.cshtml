@model PrototypeWithAuth.ViewModels.ResetPasswordViewModel;

@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_LoginView.cshtml";
    //Layout = "~/Views/Shared/RequestNavView.cshtml";
}

<section>
    <div class="container col-md-7 offset-2.5">

        <form id="" method="post">

            <span class="heading-1">Hi, @Model.User.FirstName @Model.User.LastName</span>
            @if (Model.ErrorMessage != "")
            {
                <span class="text error">@Model.ErrorMessage</span>
            }
            <div asp-validation-summary="All" class="text-danger-centarix"></div>
            <input type="hidden" asp-for="User.Id" />
            <div class="form-group text-center">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control-plaintext border-bottom" autocomplete="off" />
                <span asp-validation-for="Password" class="text-danger-centarix"></span>
            </div>
            <div class="form-group text-center">

                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control-plaintext border-bottom" autocomplete="off" />
                <span asp-validation-for="ConfirmPassword" class="text-danger-centarix"></span>
            </div>
            <div class="form-group text-center">
                <div id="qrCode" class="text-center"></div>
                <div id="qrCodeData" data-url="@Html.Raw(@Model.AuthenticatorUri)"></div>
            </div>
              <div class="form-group text-center">
                <label asp-for="TwoFactorAuthenticationViewModel.Code" class="control-label"></label>
                <input asp-for="TwoFactorAuthenticationViewModel.Code" class="form-control-plaintext border-bottom" autocomplete="off" />
                <span asp-validation-for="TwoFactorAuthenticationViewModel.Code" class="text-danger-centarix"></span>
            </div>
            <div class="form-group">
                <button asp-action="ResetPassword" type="submit" class="btn mt-3 login-button ">Reset</button>
            </div>

        </form>
    </div>
</section>
<script type="text/javascript" src="~/lib/qrcode.js"></script>
<script type="text/javascript">
        new QRCode(document.getElementById("qrCode"),
            {
                text: "@Html.Raw(Model.AuthenticatorUri)",
                width: 150,
                height: 150
            });
</script>
