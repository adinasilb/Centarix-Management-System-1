@model IEnumerable<PrototypeWithAuth.Data.ApplicationUser>
@using PrototypeWithAuth.AppData
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/RequestNavView.cshtml";
}

@*<<<<<<<<<<<< This is the Owner page >>>>>>>>>>>>>>>*@

<div class=" text-center">
    <div class="row">
    @{ var owners = "";}
        @for (int i = 0; i < Model.Count(); i++)
        {
            if (i >= 0 && i % 8 == 0)
            {
            @:</div><div class="row owners-mb ">
                owners = "";
            }
            else
            {
                owners = "owners-ml";
            }
                        <div class="col-auto @owners p-0">

                            @{
                                RequestIndexObject requestIndexObject = new RequestIndexObject() { SidebarFilterID = @Model.ElementAt(i).Id, SectionType = ((AppUtility.MenuItems)TempData[AppUtility.TempDataTypes.MenuType.ToString()]), PageType = ((AppUtility.PageTypeEnum)TempData[AppUtility.TempDataTypes.PageType.ToString()]) };

                            }

                            <a href="@Url.ActionLink("Index", "Requests", new {@requestIndexObject = requestIndexObject })"
                               class=" bold-hover-effects" id="profile-img">
                                @{
                                    var src = "/UserImages/user-image-placeholder.png";
                                    if (Model.ElementAt(i).UserImage != null)
                                    {
                                        src = "\\" + AppUtility.GetLastFiles(Model.ElementAt(i).UserImage, 2);
                                    }
                                }
                                <img id="user-image" class="circular-profile-img circular-profile-img-141" src="@src" />
                                <br />
                                <label class="owner-label mb-0">@Model.ElementAt(i).FirstName<br />@Model.ElementAt(i).LastName</label>
                            </a>
                        </div>
        }
    </div>
</div>



