
<script src="~/js/validate.js" asp-append-version="true"></script>
<div class="modal modal-document fader on-form-modal users-form"  @*role="dialog" aria-labelledby="Request"*@ data-backdrop="true">
    <div class="modal-dialog-centered modal-sm  mx-auto  " style=" min-width: 32%;">
        <div class="modal-content d-inline-block modal-box-shadow modal-border-radius">
            <button type="button" class="close modal-close-padding modal-close-style" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <form action="" method="post" enctype="multipart/form-data" style="height: 100%; overflow: auto;" class="modal-padding ">
                <div class="modal-header border-0 border-bottom modal-header-padding">
                    <div class="container">
                        <div class="row ">
                            <div class="col-6">
                                <div class="btn btn-link p-0 circular-profile-img circular-profile-img-150"><img id="user-image" /></div>
                                <div class="custom-button custom-button-font users-color overflow-hidden position-relative container">
                                    <p class="position-absolute m-0 py-1" style="height:100%" >Select image</p>
                                    <input type="file" class="form-control-file  ta pt-1" style="
                                           filter: alpha(opacity=0);
                                           opacity: 0;
                                           position: absolute;
                                           z-index: 1;
                                           width: 100%;
                                           height: 100%;">
                                </div>
                                <span class="text-danger"></span>

                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer mt-4 border-0">
                    <div class="text-center m-auto">
                        <input type="submit" class="custom-button custom-button-font users-color between-button-margin "  data-dismiss="modal"/>
                        <button class="custom-button custom-cancel cancel-email" id="cancelUserImage" >Cancel</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
