        {
            if (menuItem != "Admin")
            {
                <div class="col-6">
                    <select class="form-control my-3 inv-permissions-button">
                        <option value="@menuItem">@menuItem</option>
                    </select>
                </div>
            }
        }*@
                            </div>
                            <div id="budget" class="tab-pane fade">
                                Budget
                            </div>
                            <div id="more" class="tab-pane fade">
                                More
                            </div>
                        </div>
                    </div>
                </div>

            </form>

        </div>

    </div>

</div>
