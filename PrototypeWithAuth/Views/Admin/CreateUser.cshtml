@model PrototypeWithAuth.ViewModels.RegisterUserViewModel;
@using PrototypeWithAuth.AppData;

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")"
        type="text/javascript">
</script>

<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"
        type="text/javascript">
</script>

<script src="~/js/site.js" asp-append-version="true"></script>
@{
    ViewData["Title"] = "CreateUser";
    Layout = "~/Views/Shared/UsersView.cshtml";
}
<div class="card col-8 offset-2" style="width:100%; box-shadow: 0px 2px 6px #5656567A;">
    <div class="card-body">
        <form action="" id="createModalForm" method="post" enctype="multipart/form-data" style="height: 100%; overflow: auto;">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="new-modal-header border-bottom box-shadow container-fluid" style="padding: 0.5em 6em">
                <div class="row mt-3 mb-5">
                    <div class="col-8 offset-0">
                        <h2 class="mt-1">New User</h2>
                    </div>
                    <div class="col-4">
                        <input type="submit" value="ADD USER" asp-action="CreateUserModal" class="inv-user-button mt-1" style="float: right;" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 px-0">
                        <div class="container-fluid div-tabs text-center">
                            <ul class="nav nav-tabs container-fluid pr-0 border-bottom-0" style="display:inline-flex; justify-content:space-between; color:#666666;">
                                <li class="nav-item"><a data-toggle="tab" href="#details" class="nav-link user-nav-link"><i class="icon-centarix-icons-05" style="font-size: 2rem;"></i><br />Details</a></li>
                                <li class="nav-item"><a data-toggle="tab" href="#permissions" class="nav-link user-nav-link"><i class="icon-place-24px" style="font-size: 2rem;"></i><br />Permissions</a></li>
                                <li class="nav-item"><a data-toggle="tab" href="#budget" class="nav-link user-nav-link"><i class="icon-monetization_on-24px" style="font-size: 2rem;"></i><br />Budget</a></li>
                                <li class="nav-item"><a data-toggle="tab" href="#more" class="nav-link documents-tab user-nav-link"><i class="icon-attach_file-24px" style="font-size: 2rem;"></i><br />More</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="new-modal-body">
                <div class="container-fluid div-tabs p-5" style="background: #FFF; padding: 2em;" @*border: 2px solid #EAEAEB;"*@>
                    <div class="tab-content">
                        <div id="details" class="tab-pane fade">
                            <div class="row">
                                <div class="col-6">
                                    <label asp-for="UserName" class="control-label"></label>
                                    <input asp-for="UserName" class="form-control-plaintext border-bottom" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="col-6">
                                    <label asp-for="Email" class="control-label"></label>
                                    <input asp-for="Email" class="form-control-plaintext border-bottom" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <label asp-for="Password" class="control-label"></label>
                                    <input asp-for="Password" class="form-control-plaintext border-bottom" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="col-6">
                                    <label asp-for="SecureAppPass" class="control-label"></label>
                                    <input asp-for="SecureAppPass" class="form-control-plaintext border-bottom" />
                                    <span asp-validation-for="SecureAppPass" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div id="permissions" class="tab-pane fade">
                            <div class="row text-center">
                                <div class="col-4 offset-2 text-center">
                                    <select asp-for="SelectedOrders" class="mdb-select inv-permissions-button custom-select-sm orders-color pt-0 pb-4 text-black-50 text-center" multiple>
                                        <option value="" disabled selected>Orders &amp; Inventory</option>
                                        <option value="@AppUtility.MenuItems.OrdersAndInventory">General</option>
                                    </select>
                                </div>
                                <div class="col-4">
                                    <select asp-for="SelectedProtocols" class="mdb-select md-form inv-permissions-button custom-select-sm protocols-color pt-0 pb-4 text-black-50" multiple>
                                        <option value="" disabled selected>Protocols</option>
                                        <option value="@AppUtility.MenuItems.Protocols">General</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4 offset-2">
                                    <select asp-for="SelectedLabManagement" class="mdb-select md-form inv-permissions-button custom-select-sm labmanagement-color pt-0 pb-4 text-black-50" multiple>
                                        <option value="" disabled selected>Lab Management</option>
                                        <option value="@AppUtility.MenuItems.LabManagement">General</option>
                                    </select>
                                </div>
                                <div class="col-4">
                                    <select asp-for="SelectedAccounting" class="mdb-select md-form inv-permissions-button custom-select-sm accounting-color pt-0 pb-4 text-black-50" multiple>
                                        <option value="" disabled selected>Accounting</option>
                                        <option value="@AppUtility.MenuItems.Accounting">General</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4 offset-2">
                                    <select asp-for="SelectedOperations" class="mdb-select md-form inv-permissions-button custom-select-sm operation-color pt-0 pb-4 text-black-50" multiple>
                                        <option value="" disabled selected>Operation</option>
                                        <option value="@AppUtility.MenuItems.Operation">General</option>
                                    </select>
                                </div>
                                <div class="col-4">
                                    <select asp-for="SelectedExpenses" class="mdb-select md-form inv-permissions-button custom-select-sm expenses-color pt-0 pb-4 text-black-50" multiple>
                                        <option value="" disabled selected>Expenses</option>
                                        <option value="@AppUtility.MenuItems.Expenses">General</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4 offset-2">
                                    <select asp-for="SelectedBiomarkers" class="mdb-select md-form inv-permissions-button custom-select-sm biomarkers-color pt-0 pb-4 text-black-50" multiple>
                                        <option value="" disabled selected>Biomarkers</option>
                                        <option value="@AppUtility.MenuItems.Biomarkers">General</option>
                                    </select>
                                </div>
                                <div class="col-4">
                                    <select asp-for="SelectedIncome" class="mdb-select md-form inv-permissions-button custom-select-sm income-color pt-0 pb-4 text-black-50" multiple>
                                        <option value="" disabled selected>Income</option>
                                        <option value="@AppUtility.MenuItems.Income">General</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4 offset-2">
                                    <select asp-for="SelectedTimekeeper" class="mdb-select md-form inv-permissions-button custom-select-sm labmanagement-color pt-0 pb-4 text-black-50" multiple>
                                        <option value="" disabled selected>Timekeeper</option>
                                        <option value="@AppUtility.MenuItems.TimeKeeper">General</option>
                                    </select>
                                </div>
                                <div class="col-4">
                                    <select asp-for="SelectedUsers" class="mdb-select md-form inv-permissions-button custom-select-sm users-color pt-0 pb-4 text-black-50" multiple>
                                        <option value="" disabled selected>Users</option>
                                        <option value="@AppUtility.MenuItems.Users">General</option>
                                    </select>
                                </div>
                            </div>
                            @*@{
                                string[] roleNames = Enum.GetNames(typeof(AppUtility.MenuItems)).Cast<string>
                                ().Select(x => x.ToString()).ToArray();
                            }
                            @foreach (var menuItem in roleNames)
                            {
                                if (menuItem != "Admin")
                                {
                                    <div class="col-6">
                                        <select class="form-control my-3 inv-permissions-button">
                                            <option value="@menuItem">@menuItem</option>
                                        </select>
                                    </div>
                                }
                            }*@
                        </div>
                        <div id="budget" class="tab-pane fade">
                            <div class="row pb-3"><strong>Lab</strong></div>
                            <div class="row pb-5">
                                <div class="col-4">
                                    <label asp-for="LabMonthlyLimit" class="control-label"></label>
                                    <input asp-for="LabMonthlyLimit" class="form-control-plaintext border-bottom" />
                                    <span asp-validation-for="LabMonthlyLimit" class="text-danger"></span>
                                </div>
                                <div class="col-4">
                                    <label asp-for="LabUnitLimit" class="control-label"></label>
                                    <input asp-for="LabUnitLimit" class="form-control-plaintext border-bottom" />
                                    <span asp-validation-for="LabUnitLimit" class="text-danger"></span>
                                </div>
                                <div class="col-4">
                                    <label asp-for="LabOrderLimit" class="control-label"></label>
                                    <input asp-for="LabOrderLimit" class="form-control-plaintext border-bottom" />
                                    <span asp-validation-for="LabOrderLimit" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row pb-3"><strong>Operation</strong></div>
                            <div class="row">
                                <div class="col-4">
                                    <label asp-for="OperationMonthlyLimit" class="control-label"></label>
                                    <input asp-for="OperationMonthlyLimit" class="form-control-plaintext border-bottom" />
                                    <span asp-validation-for="OperationMonthlyLimit" class="text-danger"></span>
                                </div>
                                <div class="col-4">
                                    <label asp-for="OperationUnitLimit" class="control-label"></label>
                                    <input asp-for="OperationUnitLimit" class="form-control-plaintext border-bottom" />
                                    <span asp-validation-for="OperationUnitLimit" class="text-danger"></span>
                                </div>
                                <div class="col-4">
                                    <label asp-for="OperaitonOrderLimit" class="control-label"></label>
                                    <input asp-for="OperaitonOrderLimit" class="form-control-plaintext border-bottom" />
                                    <span asp-validation-for="OperaitonOrderLimit" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div id="more" class="tab-pane fade">
                            More
                        </div>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>

<script>
</script>