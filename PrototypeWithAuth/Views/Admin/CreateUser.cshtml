@model PrototypeWithAuth.ViewModels.RegisterUserViewModel;
@using PrototypeWithAuth.AppData;


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")"
        type="text/javascript">
</script>

<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"
        type="text/javascript">
</script>

<script src="~/js/site.js" asp-append-version="true"></script>
@{
    ViewData["Title"] = "CreateUser";
    Layout = "~/Views/Shared/UsersView.cshtml";
}
<div class="card col-8 offset-2 create-user" style="width:100%; box-shadow: 0px 2px 6px #5656567A;">
    <div class="card-body">
        <form action="" id="createModalForm" method="post" enctype="multipart/form-data" style="height: 100%; overflow: auto;">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="new-modal-header border-bottom box-shadow container-fluid" style="padding: 0.5em 6em">
                <div class="row mt-3 mb-5">
                    <div class="col-8 offset-0">
                        <h2 class="mt-1">New User</h2>
                    </div>
                    <div class="col-4">
                        <input type="submit" value="ADD USER" asp-action="CreateUserModal" class="inv-user-button mt-1 btn-block py-2" style="float: right;" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 px-0">
                        <div class="container-fluid div-tabs text-center">
                            <ul class="nav nav-tabs container-fluid pr-0 border-bottom-0" style="display:inline-flex; justify-content:space-between; color:#666666;">
                                <li class="nav-item"><a data-toggle="tab" href="#details" class="nav-link user-nav-link"><i class="icon-centarix-icons-05" style="font-size: 2rem;"></i><br />Details</a></li>
                                <li class="nav-item"><a data-toggle="tab" href="#permissions" class="nav-link user-nav-link permissions-tab"><i class="icon-place-24px" style="font-size: 2rem;"></i><br />Permissions</a></li>
                                <li class="nav-item"><a data-toggle="tab" href="#budget" class="nav-link user-nav-link"><i class="icon-monetization_on-24px" style="font-size: 2rem;"></i><br />Budget</a></li>
                                <li class="nav-item"><a data-toggle="tab" href="#more" class="nav-link documents-tab user-nav-link"><i class="icon-attach_file-24px" style="font-size: 2rem;"></i><br />More</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="new-modal-body">
                <div class="container-fluid div-tabs p-5" style="background: #FFF; padding: 2em;" @*border: 2px solid #EAEAEB;"*@>
                    <div class="tab-content">
                        <div id="details" class="tab-pane fade">
                            <div class="row">
                                <div class="col-6">
                                    <label asp-for="UserName" class="control-label"></label>
                                    <input asp-for="UserName" class="form-control-plaintext border-bottom" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="col-6">
                                    <label asp-for="Email" class="control-label"></label>
                                    <input asp-for="Email" class="form-control-plaintext border-bottom" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <label asp-for="Password" class="control-label"></label>
                                    <input asp-for="Password" class="form-control-plaintext border-bottom" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="col-6">
                                    <label asp-for="SecureAppPass" class="control-label"></label>
                                    <input asp-for="SecureAppPass" class="form-control-plaintext border-bottom" />
                                    <span asp-validation-for="SecureAppPass" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div id="permissions" class="tab-pane fade">
                            <div class="main-permissions row mt-5">
                                <div class="col-10 offset-1 text-center">
                                    <div class="row">
                                        <div class="col-2 offset-1 text-center px-2">
                                            <a href="" class="bold-hover-effects open-orders-list text-center">
                                                <img src="~/images/css/main_menu_icons/inventory.png" width="115" class="disabled-permissions" />
                                                <br />
                                                <span class="text-center">Orders &amp; Inventory</span>
                                            </a>
                                        </div>
                                        <div class="col-2 text-center px-2">
                                            <a href="" class="open-protocols-list bold-hover-effects">
                                                <img src="~/images/css/main_menu_icons/protocols.png" width="115" class="disabled-permissions" />
                                                <br />
                                                <span>Protocols</span>
                                            </a>
                                        </div>
                                        <div class="col-2 text-center px-2">
                                            <a href="" class="open-operations-list bold-hover-effects">
                                                <img src="~/images/css/main_menu_icons/operation.png" width="115" class="disabled-permissions" />
                                                <br />
                                                <span>Operations</span>
                                            </a>
                                        </div>
                                        <div class="col-2 text-center px-2">
                                            <a href="" class="open-biomarkers-list bold-hover-effects">
                                                <img src="~/images/css/main_menu_icons/biomarkers.png" width="115" class="disabled-permissions" />
                                                <br />
                                                <span>Biomarkers</span>
                                            </a>
                                        </div>
                                        <div class="col-2 text-center px-2">
                                            <a href="" class="open-timekeepers-list bold-hover-effects">
                                                <img src="~/images/css/main_menu_icons/timekeeper.png" width="115" class="disabled-permissions" />
                                                <br />
                                                <span>Timekeeper</span>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-10 offset-1 text-center my-4">
                                    <div class="row">
                                        <div class="col-2 offset-1 text-center px-2">
                                            <a href="" class="bold-hover-effects open-lab-list text-center">
                                                <img src="~/images/css/main_menu_icons/lab.png" width="115" class="disabled-permissions" />
                                                <br />
                                                <span class="text-center">Lab Management</span>
                                            </a>
                                        </div>
                                        <div class="col-2 text-center px-2">
                                            <a href="" class="open-accounting-list bold-hover-effects">
                                                <img src="~/images/css/main_menu_icons/accounting.png" width="115" class="disabled-permissions" />
                                                <br />
                                                <span>Accounting</span>
                                            </a>
                                        </div>
                                        <div class="col-2 text-center px-2">
                                            <a href="" class="open-expenses-list bold-hover-effects">
                                                <img src="~/images/css/main_menu_icons/expenses.png" width="115" class="disabled-permissions" />
                                                <br />
                                                <span>Expenses</span>
                                            </a>
                                        </div>
                                        <div class="col-2 text-center px-2">
                                            <a href="" class="open-income-list bold-hover-effects">
                                                <img src="~/images/css/main_menu_icons/income.png" width="115" class="disabled-permissions" />
                                                <br />
                                                <span>Income</span>
                                            </a>
                                        </div>
                                        <div class="col-2 text-center px-2">
                                            <a href="" class="open-users-list bold-hover-effects">
                                                <img src="~/images/css/main_menu_icons/users.png" width="115" class="disabled-permissions" />
                                                <br />
                                                <span>Users</span>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="orders-list">
                                <div class="row h-100">
                                    <div class="col-12 my-auto">
                                        <a href="" class="back-to-main-permissions mr-5 my-auto">@*<img src="" alt="<" />*@<span style="font-size:1.5em;"><</span></a>
                                        <img src="~/images/css/usericons/inventory_dropdown@2x.png" class="my-auto" width="40" />
                                        <span class="my-auto" style="font-size: 1.2em;"> Orders &amp; Inventory</span>
                                    </div>
                                    <div class="col-3 offset-2 mt-3">
                                        @foreach(var orderPermission in Model.OrderList)
                                        {
                                            @Html.CheckBoxFor(m => m.OrderList[orderPermission.Key])
                                            @Html.LabelFor(m => m.OrderList[orderPermission.Key])
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="protocols-list">
                                <div class="row h-100">
                                    <div class="col-12 my-auto">
                                        <a href="" class="back-to-main-permissions mr-5 my-auto">@*<img src="" alt="<" />*@<span style="font-size:1.5em;"><</span></a>
                                        <img src="~/images/css/usericons/protocols_dropdown@2x.png" class="my-auto" width="40" />
                                        <span class="my-auto" style="font-size: 1.2em;">Protocols</span>
                                    </div>
                                </div>
                            </div>
                            <div class="operations-list">
                                <div class="row h-100">
                                    <div class="col-12 my-auto">
                                        <a href="" class="back-to-main-permissions mr-5 my-auto">@*<img src="" alt="<" />*@<span style="font-size:1.5em;"><</span></a>
                                        <img src="~/images/css/usericons/operation_dropdown@2x.png" class="my-auto" width="40" />
                                        <span class="my-auto" style="font-size:1.2em;">Operations</span>
                                    </div>
                                </div>
                            </div>
                            <div class="biomarkers-list">
                                <div class="row h-100">
                                    <div class="col-12 my-auto">
                                        <a href="" class="back-to-main-permissions mr-5 my-auto">@*<img src="" alt="<" />*@<span style="font-size:1.5em;"><</span></a>
                                        <img src="~/images/css/usericons/biomarkers_dropdown@2x.png" class="my-auto" width="40" />
                                        <span class="my-auto" style="font-size:1.2em;">Biomarkers</span>
                                    </div>
                                </div>
                            </div>
                            <div class="timekeeper-list">
                                <div class="row h-100">
                                    <div class="col-12 my-auto">
                                        <a href="" class="back-to-main-permissions mr-5 my-auto">@*<img src="" alt="<" />*@<span style="font-size:1.5em;"><</span></a>
                                        <img src="~/images/css/usericons/timekeeper_dropdown@2x.png" class="my-auto" width="40" />
                                        <span class="my-auto" style="font-size:1.2em;">Timekeeper</span>
                                    </div>
                                </div>
                            </div>
                            <div class="lab-list">
                                <div class="row h-100">
                                    <div class="col-12 my-auto">
                                        <a href="" class="back-to-main-permissions mr-5 my-auto">@*<img src="" alt="<" />*@<span style="font-size:1.5em;"><</span></a>
                                        <img src="~/images/css/usericons/labmanagments_dropdown@2x.png" class="my-auto" width="40" />
                                        <span class="my-auto" style="font-size:1.2em;">Lab Management</span>
                                    </div>
                                </div>
                            </div>
                            <div class="accounting-list">
                                <div class="row h-100">
                                    <div class="col-12 my-auto">
                                        <a href="" class="back-to-main-permissions mr-5 my-auto">@*<img src="" alt="<" />*@<span style="font-size:1.5em;"><</span></a>
                                        <img src="~/images/css/usericons/accounting_dropdown@2x.png" class="my-auto" width="40" />
                                        <span class="my-auto" style="font-size:1.2em;">Accounting</span>
                                    </div>
                                </div>
                            </div>
                            <div class="expenses-list">
                                <div class="row h-100">
                                    <div class="col-12 my-auto">
                                        <a href="" class="back-to-main-permissions mr-5 my-auto">@*<img src="" alt="<" />*@<span style="font-size:1.5em;"><</span></a>
                                        <img src="~/images/css/usericons/expenses_dropdown@2x.png" class="my-auto" width="40" />
                                        <span class="my-auto" style="font-size: 1.2em;">Expenses</span>
                                    </div>
                                </div>
                            </div>
                            <div class="income-list">
                                <div class="row h-100">
                                    <div class="col-12 my-auto">
                                        <a href="" class="back-to-main-permissions mr-5 my-auto">@*<img src="" alt="<" />*@<span style="font-size:1.5em;"><</span></a>
                                        <img src="~/images/css/usericons/income_dropdown@2x.png" class="my-auto" width="40" />
                                        <span class="my-auto" style="font-size: 1.2em;">Income</span>
                                    </div>
                                </div>
                            </div>
                            <div class="users-list">
                                <div class="row h-100">
                                    <div class="col-12 my-auto">
                                        <a href="" class="back-to-main-permissions mr-5 my-auto">@*<img src="" alt="<" />*@<span style="font-size:1.5em;"><</span></a>
                                        <img src="~/images/css/usericons/users_dropdown@2x.png" class="my-auto" width="40" />
                                        <span class="my-auto" style="font-size: 1.2em;">Users</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="budget" class="tab-pane fade">
                            <div class="row pb-3"><strong>Lab</strong></div>
                            <div class="row pb-5">
                                <div class="col-4">
                                    <label asp-for="LabMonthlyLimit" class="control-label"></label>
                                    <input asp-for="LabMonthlyLimit" class="form-control-plaintext border-bottom" />
                                    <span asp-validation-for="LabMonthlyLimit" class="text-danger"></span>
                                </div>
                                <div class="col-4">
                                    <label asp-for="LabUnitLimit" class="control-label"></label>
                                    <input asp-for="LabUnitLimit" class="form-control-plaintext border-bottom" />
                                    <span asp-validation-for="LabUnitLimit" class="text-danger"></span>
                                </div>
                                <div class="col-4">
                                    <label asp-for="LabOrderLimit" class="control-label"></label>
                                    <input asp-for="LabOrderLimit" class="form-control-plaintext border-bottom" />
                                    <span asp-validation-for="LabOrderLimit" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row pb-3"><strong>Operation</strong></div>
                            <div class="row">
                                <div class="col-4">
                                    <label asp-for="OperationMonthlyLimit" class="control-label"></label>
                                    <input asp-for="OperationMonthlyLimit" class="form-control-plaintext border-bottom" />
                                    <span asp-validation-for="OperationMonthlyLimit" class="text-danger"></span>
                                </div>
                                <div class="col-4">
                                    <label asp-for="OperationUnitLimit" class="control-label"></label>
                                    <input asp-for="OperationUnitLimit" class="form-control-plaintext border-bottom" />
                                    <span asp-validation-for="OperationUnitLimit" class="text-danger"></span>
                                </div>
                                <div class="col-4">
                                    <label asp-for="OperaitonOrderLimit" class="control-label"></label>
                                    <input asp-for="OperaitonOrderLimit" class="form-control-plaintext border-bottom" />
                                    <span asp-validation-for="OperaitonOrderLimit" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div id="more" class="tab-pane fade">
                            More
                        </div>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>
